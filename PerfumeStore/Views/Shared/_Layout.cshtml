<!DOCTYPE html>
@{
    // التصحيح هنا: استخدام StartsWith بدلاً من المطابقة الكاملة
    var currentCulture = System.Globalization.CultureInfo.CurrentCulture.Name;
    var isArabic = currentCulture.StartsWith("ar");
}
<html lang="@currentCulture" dir="@(isArabic ? "rtl" : "ltr")">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - نور للعود والعطور</title>
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="icon" type="image/x-icon" href="~/images/logo.png" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Tajawal:wght@300;400;500;700&display=swap" rel="stylesheet">
    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="@(isArabic ? "rtl" : "ltr")">
    <!-- Header -->
    <header class="header">
        <nav class="navbar">
            <div class="container nav-container">
                <a href="/" class="logo">
                    <img style="padding:10px;width:100px;" src="~/images/logo.png" />
                </a>

                <button class="mobile-menu-btn" id="mobileMenuBtn">
                    <i class="fas fa-bars"></i>
                </button>

                <div class="nav-menu" id="navMenu">
                    <ul class="nav-list">
                        <li><a href="/" class="nav-link active">@(isArabic ? "الرئيسية" : "Home")</a></li>
                        <li><a href="/Products" class="nav-link">@(isArabic ? "المنتجات" : "Products")</a></li>
                        <li><a href="/Home/About" class="nav-link">@(isArabic ? "من نحن" : "About")</a></li>
                        <li><a href="/Home/Contact" class="nav-link">@(isArabic ? "تواصل معنا" : "Contact")</a></li>
                    </ul>
                </div>

                <div class="nav-right">
                    <div class="language-switcher">
                        <!-- استخدام نفس المنطق في الأزرار -->
                        <a href="/Home/SetLanguage?culture=ar&returnUrl=@Context.Request.Path" class="lang-btn @(isArabic ? "active" : "")">AR</a>
                        <span class="lang-divider">|</span>
                        <a href="/Home/SetLanguage?culture=en&returnUrl=@Context.Request.Path" class="lang-btn @(!isArabic ? "active" : "")">EN</a>
                    </div>

                    <a href="/Cart" class="nav-icon-btn cart-btn">
                        <i class="fas fa-shopping-bag"></i>
                        <span class="cart-count" id="cartCount">0</span>
                    </a>

                    @if (User.Identity?.IsAuthenticated ?? false)
                    {
                        <div class="user-dropdown">
                            <a href="/Account/Profile" class="nav-icon-btn"><i class="fas fa-user"></i></a>
                        </div>
                    }
                    else
                    {
                        <a href="/Account/Login" class="nav-icon-btn"><i class="fas fa-user"></i></a>
                    }
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <main class="main-content">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="footer-grid">
                <!-- Brand -->
                <div class="footer-brand">
                    <a href="/" class="logo" >
                        <img style="padding:10px;width:150px;" src="~/images/logo.png" />
                    </a>
                    <p class="footer-desc">
                        @(isArabic
                                                ? "نور للعود والعطور، علامة تجارية عمانية رائدة في مجال العود والبخور والعطور الفرنسية."
                                                : "Nour Oud & Perfumes, a leading Omani brand in Oud, Incense, and French Perfumes.")
                    </p>
                    <div class="social-links">
                        <a href="https://instagram.com/nourperfumes.om" class="social-link"><i class="fab fa-instagram"></i></a>
                        <a href="https://wa.me/96898185589" class="social-link"><i class="fab fa-whatsapp"></i></a>
                    </div>
                </div>

                <!-- Policies -->
                <div class="footer-links">
                    <h4>@(isArabic ? "السياسات" : "Policies")</h4>
                    <ul>
                        <li><a href="/Home/Terms">@(isArabic ? "الشروط والأحكام" : "Terms & Conditions")</a></li>
                        <li><a href="/Home/Privacy">@(isArabic ? "سياسة الخصوصية" : "Privacy Policy")</a></li>
                        <li><a href="/Home/Returns">@(isArabic ? "سياسة الاسترجاع" : "Return Policy")</a></li>
                    </ul>
                </div>

                <!-- Branches -->
                <div class="footer-links">
                    <h4>@(isArabic ? "الفروع" : "Branches")</h4>
                    <ul>
                        <li><i class="fas fa-map-marker-alt" style="color: #d4af37; margin-left:5px;"></i> @(isArabic ? "الموالح" : "Al Mawaleh")</li>
                        <li><i class="fas fa-map-marker-alt" style="color: #d4af37; margin-left:5px;"></i> @(isArabic ? "صور" : "Sur")</li>
                    </ul>
                </div>

                <!-- Contact -->
                <div class="footer-contact">
                    <h4>@(isArabic ? "تواصل معنا" : "Contact")</h4>
                    <ul>
                        <li><i class="fas fa-phone"></i> 98185589 | 96366332</li>
                        <li><i class="fas fa-envelope"></i> info@nourperfumes.com</li>
                    </ul>
                </div>
            </div>

            <div class="footer-bottom">
                <p>&copy; @DateTime.Now.Year Nour Perfumes. @(isArabic ? "جميع الحقوق محفوظة" : "All rights reserved.")</p>
                <div class="payment-methods">
                    <i class="fab fa-cc-visa"></i>
                    <i class="fab fa-cc-mastercard"></i>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/js/main.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


