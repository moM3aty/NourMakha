@{
    ViewData["Title"] = "Access Denied";
    var isArabic = System.Globalization.CultureInfo.CurrentCulture.Name.StartsWith("ar");
}

<div class="access-denied-container">
    <div class="content-box animate-fade-up">
        <div class="icon-circle">
            <i class="fas fa-lock"></i>
        </div>
        <h1>@(isArabic ? "تم رفض الوصول" : "Access Denied")</h1>
        <p>@(isArabic ? "عذراً، ليس لديك الصلاحية لعرض هذه الصفحة." : "Sorry, you do not have permission to view this page.")</p>

        <div class="actions">
            <a href="/" class="btn btn-primary">
                <i class="fas fa-home"></i> @(isArabic ? "الرئيسية" : "Home")
            </a>
            @if (User.Identity?.IsAuthenticated ?? false)
            {
                <a href="/Account/Profile" class="btn btn-outline">
                    <i class="fas fa-user"></i> @(isArabic ? "حسابي" : "My Profile")
                </a>
            }
            else
            {
                <a href="/Account/Login" class="btn btn-outline">
                    <i class="fas fa-sign-in-alt"></i> @(isArabic ? "تسجيل الدخول" : "Login")
                </a>
            }
        </div>
    </div>
</div>

<style>
    .access-denied-container {
        min-height: 80vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #f8f9fa;
        padding: 2rem;
    }

    .content-box {
        background: #fff;
        padding: 3rem;
        border-radius: 20px;
        text-align: center;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.05);
        max-width: 500px;
        width: 100%;
        border: 1px solid rgba(0, 40, 85, 0.05);
    }

    .icon-circle {
        width: 80px;
        height: 80px;
        background: rgba(231, 76, 60, 0.1);
        color: #e74c3c;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2.5rem;
        margin: 0 auto 1.5rem;
    }

    .content-box h1 {
        color: #002855;
        font-family: 'Playfair Display', serif;
        margin-bottom: 0.5rem;
    }

    .content-box p {
        color: #6c757d;
        margin-bottom: 2rem;
    }

    .actions {
        display: flex;
        justify-content: center;
        gap: 1rem;
    }

    .btn {
        padding: 0.8rem 1.5rem;
        border-radius: 50px;
        text-decoration: none;
        font-weight: 600;
        transition: 0.3s;
    }

    .btn-primary {
        background: #002855;
        color: #fff;
    }

        .btn-primary:hover {
            background: #004080;
        }

    .btn-outline {
        border: 1px solid #002855;
        color: #002855;
    }

        .btn-outline:hover {
            background: rgba(0, 40, 85, 0.05);
        }
</style>