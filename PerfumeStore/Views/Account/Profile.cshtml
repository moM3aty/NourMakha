@model PerfumeStore.Models.ApplicationUser
@using Microsoft.EntityFrameworkCore
@using PerfumeStore.Data
@inject ApplicationDbContext _context
@{
    ViewData["Title"] = System.Globalization.CultureInfo.CurrentCulture.Name == "ar" ? "حسابي" : "My Profile";
    var isArabic = System.Globalization.CultureInfo.CurrentCulture.Name == "ar";
    var orders = ViewBag.Orders as List<PerfumeStore.Models.Order>;

    // Fetch Wishlist Items
    var wishlistItems = _context.Set<PerfumeStore.Models.WishlistItem>()
        .Where(w => w.UserId == Model.Id)
        .Include(w => w.Product)
        .ToList();
}

<div class="profile-page-wrapper" style="margin-top:70px;">
    <div class="container">
        <!-- Profile Header -->
        <div class="profile-header-card animate-fade-up">
            <div class="user-info-main">
                <div class="avatar-circle">
                    <span>@(Model.FirstName?.FirstOrDefault())</span>
                </div>
                <div class="user-text">
                    <h1>@(isArabic ? "مرحباً،" : "Hello,") @Model.FirstName</h1>
                    <p>@Model.Email</p>
                    <span class="membership-badge"><i class="fas fa-crown"></i> @(isArabic ? "عضو مميز" : "Premium Member")</span>
                </div>
            </div>
            <div class="header-stats">
                <div class="stat-box">
                    <span class="num">@orders?.Count</span>
                    <span class="label">@(isArabic ? "الطلبات" : "Orders")</span>
                </div>
                <div class="stat-separator"></div>
                <div class="stat-box">
                    <span class="num">@wishlistItems.Count</span>
                    <span class="label">@(isArabic ? "المفضلة" : "Wishlist")</span>
                </div>
            </div>
        </div>

        <div class="profile-layout animate-fade-up delay-1">
            <!-- Sidebar Navigation -->
            <aside class="profile-sidebar">
                <div class="nav-menu-profile">
                    <button class="nav-item active" onclick="switchTab('dashboard', this)">
                        <span class="icon-wrap"><i class="fas fa-th-large"></i></span>
                        <span class="text">@(isArabic ? "لوحة التحكم" : "Dashboard")</span>
                    </button>
                    <button class="nav-item" onclick="switchTab('orders', this)">
                        <span class="icon-wrap"><i class="fas fa-box-open"></i></span>
                        <span class="text">@(isArabic ? "طلباتي" : "My Orders")</span>
                    </button>
                    <button class="nav-item" onclick="switchTab('wishlist', this)">
                        <span class="icon-wrap"><i class="far fa-heart"></i></span>
                        <span class="text">@(isArabic ? "المفضلة" : "Wishlist")</span>
                    </button>
                    <button class="nav-item" onclick="switchTab('settings', this)">
                        <span class="icon-wrap"><i class="fas fa-cog"></i></span>
                        <span class="text">@(isArabic ? "الإعدادات" : "Settings")</span>
                    </button>

                    @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                    {
                        <div class="nav-divider"></div>
                        <a href="/Admin" class="nav-item" style="text-decoration: none;">
                            <span class="icon-wrap"><i class="fas fa-user-shield"></i></span>
                            <span class="text">@(isArabic ? "لوحة الإدارة" : "Admin Panel")</span>
                        </a>
                    }

                    <div class="nav-divider"></div>
                    <form asp-action="Logout" method="post" style="width:100%">
                        <button type="submit" class="nav-item logout">
                            <span class="icon-wrap"><i class="fas fa-sign-out-alt"></i></span>
                            <span class="text">@(isArabic ? "تسجيل الخروج" : "Logout")</span>
                        </button>
                    </form>
                </div>
            </aside>

            <!-- Main Content Area -->
            <div class="profile-content-area">

                <!-- Dashboard Tab -->
                <div id="dashboard" class="tab-content active">
                    <div class="content-header">
                        <h2>@(isArabic ? "نظرة عامة" : "Overview")</h2>
                    </div>

                    <div class="dashboard-widgets">
                        <div class="welcome-box">
                            <div class="icon"><i class="fas fa-smile-beam"></i></div>
                            <div>
                                <h3>@(isArabic ? "أهلاً بك في عالم نور مخا" : "Welcome to NourMakha World")</h3>
                                <p>@(isArabic ? "استمتع بتجربة تسوق فريدة وتتبع طلباتك بكل سهولة." : "Enjoy a unique shopping experience and track your orders easily.")</p>
                            </div>
                        </div>

                        <div class="info-summary-grid">
                            <div class="info-card">
                                <div class="card-icon"><i class="fas fa-map-marker-alt"></i></div>
                                <h4>@(isArabic ? "عنوان الشحن" : "Shipping Address")</h4>
                                <p>@(string.IsNullOrEmpty(Model.Address) ? (isArabic ? "غير محدد" : "Not set") : $"{Model.Address}, {Model.City}")</p>
                                <button class="btn-link" onclick="switchTab('settings', document.querySelectorAll('.nav-item')[3])">@(isArabic ? "تعديل" : "Edit")</button>
                            </div>
                            <div class="info-card">
                                <div class="card-icon"><i class="fas fa-phone"></i></div>
                                <h4>@(isArabic ? "رقم الهاتف" : "Phone Number")</h4>
                                <p>@(string.IsNullOrEmpty(Model.PhoneNumber) ? (isArabic ? "غير محدد" : "Not set") : Model.PhoneNumber)</p>
                                <button class="btn-link" onclick="switchTab('settings', document.querySelectorAll('.nav-item')[3])">@(isArabic ? "تعديل" : "Edit")</button>
                            </div>
                            <div class="info-card">
                                <div class="card-icon"><i class="fas fa-check-circle"></i></div>
                                <h4>@(isArabic ? "حالة الحساب" : "Account Status")</h4>
                                <p style="color: #2ecc71; font-weight: bold;">@(isArabic ? "نشط" : "Active")</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Orders Tab -->
                <div id="orders" class="tab-content">
                    <div class="content-header">
                        <h2>@(isArabic ? "سجل الطلبات" : "Order History")</h2>
                    </div>
                    @if (orders != null && orders.Any())
                    {
                        <div class="orders-list-modern">
                            @foreach (var order in orders)
                            {
                                <div class="order-item-modern">
                                    <div class="order-main-info">
                                        <div class="order-id-date">
                                            <span class="order-num">#@order.OrderNumber</span>
                                            <span class="order-date"><i class="far fa-clock"></i> @order.CreatedAt.ToString("MMM dd, yyyy")</span>
                                        </div>
                                        <span class="order-status-badge @order.Status.ToLower()">@order.Status</span>
                                    </div>

                                    <div class="order-products-preview">
                                        @foreach (var item in order.OrderItems.Take(3))
                                        {
                                            <img src="@(item.ProductImage ?? "/images/placeholder.jpg")" title="@item.ProductName" alt="Product" />
                                        }
                                        @if (order.OrderItems.Count > 3)
                                        {
                                            <span class="more-items">+@(order.OrderItems.Count - 3)</span>
                                        }
                                    </div>

                                    <div class="order-footer">
                                        <div class="total-amount">
                                            <span>@(isArabic ? "الإجمالي" : "Total")</span>
                                            <strong class="currency-price" data-base-price="@order.GrandTotal">@order.GrandTotal OMR</strong>
                                        </div>
                                        <a href="#" class="btn-track-order">@(isArabic ? "التفاصيل" : "Details") <i class="fas fa-arrow-right"></i></a>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="empty-tab">
                            <div class="empty-icon-circle"><i class="fas fa-shopping-bag"></i></div>
                            <h3>@(isArabic ? "لا توجد طلبات سابقة" : "No Past Orders")</h3>
                            <p>@(isArabic ? "لم تقم بأي طلبات بعد، ابدأ التسوق الآن!" : "You haven't placed any orders yet, start shopping now!")</p>
                            <a href="/Products" class="btn-action">@(isArabic ? "تصفح المنتجات" : "Browse Products")</a>
                        </div>
                    }
                </div>

                <!-- Wishlist Tab -->
                <div id="wishlist" class="tab-content">
                    <div class="content-header">
                        <h2>@(isArabic ? "المنتجات المفضلة" : "My Wishlist")</h2>
                    </div>
                    @if (wishlistItems.Any())
                    {
                        <div class="wishlist-grid-pro">
                            @foreach (var item in wishlistItems)
                            {
                                <div class="wishlist-card">
                                    <div class="w-image">
                                        <img src="@(item.Product.ImageUrl ?? "/images/placeholder.jpg")" alt="@item.Product.Name" />
                                        <button class="btn-remove-w" onclick="removeFromWishlist(@item.ProductId)"><i class="fas fa-times"></i></button>
                                    </div>
                                    <div class="w-details">
                                        <span class="brand">@(isArabic? item.Product.BrandAr : item.Product.Brand)</span>
                                        <h4>@item.Product.Name</h4>
                                        <div class="w-footer">
                                            <span class="price currency-price" data-base-price="@item.Product.Price">@item.Product.Price OMR</span>
                                            <button class="btn-add-w" onclick="addToCart(@item.ProductId)"><i class="fas fa-shopping-bag"></i></button>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="empty-tab">
                            <div class="empty-icon-circle"><i class="far fa-heart"></i></div>
                            <h3>@(isArabic ? "قائمة المفضلة فارغة" : "Your Wishlist is Empty")</h3>
                            <a href="/Products" class="btn-action">@(isArabic ? "اكتشف العطور" : "Discover Perfumes")</a>
                        </div>
                    }
                </div>

                <!-- Settings Tab -->
                <div id="settings" class="tab-content">
                    <div class="content-header">
                        <h2>@(isArabic ? "إعدادات الحساب" : "Account Settings")</h2>
                    </div>
                    <form asp-action="UpdateProfile" method="post" class="settings-form-modern">
                        <div class="form-section-title">@(isArabic ? "المعلومات الشخصية" : "Personal Information")</div>
                        <div class="form-row-2">
                            <div class="form-group-float">
                                <input asp-for="FirstName" class="form-input" placeholder=" " />
                                <label>@(isArabic ? "الاسم الأول" : "First Name")</label>
                            </div>
                            <div class="form-group-float">
                                <input asp-for="LastName" class="form-input" placeholder=" " />
                                <label>@(isArabic ? "الاسم الأخير" : "Last Name")</label>
                            </div>
                        </div>

                        <div class="form-section-title">@(isArabic ? "معلومات الاتصال" : "Contact Information")</div>
                        <div class="form-group-float">
                            <input asp-for="PhoneNumber" class="form-input" placeholder=" " />
                            <label>@(isArabic ? "رقم الهاتف" : "Phone Number")</label>
                        </div>

                        <div class="form-row-2">
                            <div class="form-group-float">
                                <input asp-for="City" class="form-input" placeholder=" " />
                                <label>@(isArabic ? "المدينة" : "City")</label>
                            </div>
                            <div class="form-group-float">
                                <input asp-for="Address" class="form-input" placeholder=" " />
                                <label>@(isArabic ? "العنوان" : "Address")</label>
                            </div>
                        </div>

                        <button type="submit" class="btn-save-pro">
                            @(isArabic ? "حفظ التغييرات" : "Save Changes")
                        </button>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>

<style>
    /* Premium Profile Styles */
    .profile-page-wrapper {
        padding: 40px 0 80px;
        background: #f8f9fa;
        min-height: 100vh;
    }

    /* Header Card */
    .profile-header-card {
        background: #fff;
        border-radius: 20px;
        padding: 2.5rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        box-shadow: 0 10px 40px rgba(0,0,0,0.05);
        margin-bottom: 2rem;
        border: 1px solid rgba(0, 40, 85, 0.05);
        position: relative;
        overflow: hidden;
    }

        .profile-header-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 6px;
            height: 100%;
            background: #002855;
        }

    .user-info-main {
        display: flex;
        align-items: center;
        gap: 1.5rem;
        z-index: 1;
    }

    .avatar-circle {
        width: 90px;
        height: 90px;
        background: linear-gradient(135deg, #002855, #004080);
        color: #fff;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2.8rem;
        font-family: 'Playfair Display', serif;
        box-shadow: 0 5px 15px rgba(0, 40, 85, 0.3);
        border: 4px solid rgba(255,255,255,0.8);
    }

    .user-text h1 {
        font-size: 1.8rem;
        margin: 0 0 5px;
        color: #002855;
        font-family: 'Playfair Display', serif;
    }

    .user-text p {
        color: #6c757d;
        margin: 0 0 10px;
        font-size: 0.95rem;
    }

    .membership-badge {
        background: rgba(0, 40, 85, 0.05);
        color: #002855;
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
    }

    .header-stats {
        display: flex;
        gap: 2rem;
        align-items: center;
    }

    .stat-separator {
        width: 1px;
        height: 40px;
        background: #e9ecef;
    }

    .stat-box {
        text-align: center;
        min-width: 80px;
    }

        .stat-box .num {
            display: block;
            font-size: 1.6rem;
            font-weight: 700;
            color: #002855;
            line-height: 1.2;
        }

        .stat-box .label {
            font-size: 0.85rem;
            color: #6c757d;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

    /* Sidebar Navigation */
    .profile-layout {
        display: grid;
        grid-template-columns: 280px 1fr;
        gap: 2rem;
    }

    .profile-sidebar {
        background: #fff;
        border-radius: 16px;
        padding: 1.5rem;
        height: fit-content;
        box-shadow: 0 5px 25px rgba(0,0,0,0.03);
    }

    .nav-item {
        width: 100%;
        text-align: inherit;
        padding: 1rem 1.2rem;
        border: none;
        background: transparent;
        color: #495057;
        font-size: 1rem;
        cursor: pointer;
        border-radius: 12px;
        margin-bottom: 0.5rem;
        transition: all 0.3s;
        display: flex;
        align-items: center;
        gap: 12px;
        font-weight: 500;
    }

    .icon-wrap {
        width: 24px;
        text-align: center;
        transition: 0.3s;
    }

    .nav-item:hover {
        background: #f8f9fa;
        color: #002855;
    }

    .nav-item.active {
        background: rgba(0, 40, 85, 0.05);
        color: #002855;
        font-weight: 700;
    }

        .nav-item.active .icon-wrap {
            color: #002855;
        }

    .nav-divider {
        height: 1px;
        background: #e9ecef;
        margin: 1rem 0;
    }

    .nav-item.logout {
        color: #e74c3c;
    }

        .nav-item.logout:hover {
            background: rgba(231, 76, 60, 0.05);
        }

    /* Content Area */
    .profile-content-area {
        background: #fff;
        border-radius: 16px;
        padding: 2.5rem;
        box-shadow: 0 5px 25px rgba(0,0,0,0.03);
        min-height: 500px;
    }

    .tab-content {
        display: none;
        animation: fadeIn 0.4s ease;
    }

        .tab-content.active {
            display: block;
        }

    .content-header {
        border-bottom: 1px solid #f1f3f5;
        padding-bottom: 1.5rem;
        margin-bottom: 2rem;
    }

        .content-header h2 {
            color: #002855;
            font-size: 1.6rem;
            margin: 0;
            font-family: 'Playfair Display', serif;
        }

    /* Dashboard Widgets */
    .welcome-box {
        background: linear-gradient(135deg, rgba(0, 40, 85, 0.03) 0%, rgba(0, 40, 85, 0.08) 100%);
        border-radius: 12px;
        padding: 2rem;
        display: flex;
        gap: 1.5rem;
        align-items: center;
        margin-bottom: 2rem;
        border: 1px solid rgba(0, 40, 85, 0.05);
    }

        .welcome-box .icon {
            font-size: 2.5rem;
            color: #002855;
            opacity: 0.8;
        }

        .welcome-box h3 {
            margin: 0 0 0.5rem;
            color: #002855;
        }

        .welcome-box p {
            margin: 0;
            color: #495057;
        }

    .info-summary-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1.5rem;
    }

    .info-card {
        border: 1px solid #f1f3f5;
        border-radius: 12px;
        padding: 1.5rem;
        transition: 0.3s;
    }

        .info-card:hover {
            border-color: rgba(0, 40, 85, 0.2);
            box-shadow: 0 4px 15px rgba(0,0,0,0.03);
        }

        .info-card .card-icon {
            color: #002855;
            font-size: 1.2rem;
            margin-bottom: 1rem;
        }

        .info-card h4 {
            margin: 0 0 0.5rem;
            font-size: 1rem;
            color: #212529;
        }

        .info-card p {
            color: #6c757d;
            margin-bottom: 1rem;
            font-size: 0.9rem;
        }

    .btn-link {
        background: none;
        border: none;
        color: #002855;
        font-weight: 600;
        padding: 0;
        cursor: pointer;
        font-size: 0.9rem;
    }

        .btn-link:hover {
            text-decoration: underline;
        }

    /* Orders Modern List */
    .orders-list-modern {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .order-item-modern {
        border: 1px solid #e9ecef;
        border-radius: 12px;
        overflow: hidden;
        transition: 0.3s;
    }

        .order-item-modern:hover {
            border-color: #002855;
            box-shadow: 0 5px 20px rgba(0,0,0,0.05);
        }

    .order-main-info {
        background: #f8f9fa;
        padding: 1rem 1.5rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-bottom: 1px solid #e9ecef;
    }

    .order-num {
        font-weight: 700;
        color: #002855;
        font-size: 1.1rem;
    }

    .order-date {
        color: #6c757d;
        font-size: 0.9rem;
        margin-inline-start: 10px;
    }

    .order-status-badge {
        padding: 5px 12px;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
    }

        .order-status-badge.pending {
            background: #fff3cd;
            color: #856404;
        }

        .order-status-badge.delivered {
            background: #d4edda;
            color: #155724;
        }

        .order-status-badge.processing {
            background: #cce5ff;
            color: #004085;
        }

    .order-products-preview {
        padding: 1.5rem;
        display: flex;
        gap: 10px;
        align-items: center;
    }

        .order-products-preview img {
            width: 60px;
            height: 60px;
            object-fit: cover;
            border-radius: 8px;
            border: 1px solid #f1f3f5;
        }

    .more-items {
        width: 60px;
        height: 60px;
        background: #f8f9fa;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        color: #6c757d;
    }

    .order-footer {
        padding: 1rem 1.5rem;
        border-top: 1px dashed #e9ecef;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .total-amount span {
        color: #6c757d;
        font-size: 0.9rem;
        margin-inline-end: 5px;
    }

    .total-amount strong {
        color: #002855;
        font-size: 1.1rem;
    }

    .btn-track-order {
        color: #002855;
        text-decoration: none;
        font-weight: 600;
        font-size: 0.9rem;
        transition: 0.2s;
    }

        .btn-track-order:hover {
            color: #004080;
            gap: 8px;
            display: inline-flex;
            align-items: center;
        }

    /* Wishlist Grid */
    .wishlist-grid-pro {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
        gap: 1.5rem;
    }

    .wishlist-card {
        border: 1px solid #f1f3f5;
        border-radius: 12px;
        overflow: hidden;
        transition: 0.3s;
        position: relative;
    }

        .wishlist-card:hover {
            border-color: rgba(0, 40, 85, 0.2);
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        }

    .w-image {
        position: relative;
        height: 200px;
        background: #f8f9fa;
        overflow: hidden;
    }

        .w-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: 0.5s;
        }

    .wishlist-card:hover .w-image img {
        transform: scale(1.05);
    }

    .btn-remove-w {
        position: absolute;
        top: 10px;
        right: 10px;
        width: 30px;
        height: 30px;
        border-radius: 50%;
        background: #fff;
        border: none;
        color: #e74c3c;
        cursor: pointer;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        display: flex;
        align-items: center;
        justify-content: center;
        transition: 0.2s;
    }

        .btn-remove-w:hover {
            background: #e74c3c;
            color: #fff;
        }

    .w-details {
        padding: 1rem;
    }

        .w-details .brand {
            font-size: 0.75rem;
            color: #6c757d;
            text-transform: uppercase;
            display: block;
            margin-bottom: 3px;
        }

        .w-details h4 {
            font-size: 1rem;
            margin: 0 0 10px;
            color: #212529;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

    .w-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

        .w-footer .price {
            font-weight: 700;
            color: #002855;
        }

    .btn-add-w {
        width: 35px;
        height: 35px;
        border-radius: 8px;
        background: #002855;
        color: #fff;
        border: none;
        cursor: pointer;
        transition: 0.2s;
