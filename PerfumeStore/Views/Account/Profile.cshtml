@model PerfumeStore.Models.ApplicationUser
@{
    ViewData["Title"] = System.Globalization.CultureInfo.CurrentCulture.Name == "ar" ? "الملف الشخصي" : "My Profile";
    var isArabic = System.Globalization.CultureInfo.CurrentCulture.Name == "ar";
    var orders = ViewBag.Orders as List<PerfumeStore.Models.Order>;
}

<div class="container" style="padding-top: 120px; padding-bottom: 60px;">
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success" style="background: rgba(46, 204, 113, 0.2); border: 1px solid #2ecc71; color: #2ecc71; padding: 1rem; border-radius: 8px; margin-bottom: 2rem;">
            <i class="fas fa-check-circle"></i> @TempData["Success"]
        </div>
    }

    <div class="profile-grid">
        <!-- Sidebar / User Info -->
        <div class="profile-sidebar">
            <div class="user-card">
                <div class="user-avatar-large">
                    <span>@(Model.FirstName?.FirstOrDefault())@(Model.LastName?.FirstOrDefault())</span>
                </div>
                <h3>@Model.FirstName @Model.LastName</h3>
                <p>@Model.Email</p>

                <div class="user-stats">
                    <div class="stat">
                        <span class="value">@(orders?.Count ?? 0)</span>
                        <span class="label">@(isArabic ? "الطلبات" : "Orders")</span>
                    </div>
                    <div class="stat">
                        <span class="value">@(orders?.Sum(o => o.GrandTotal).ToString("N0") ?? "0")</span>
                        <span class="label">@(isArabic ? "المشتريات" : "Spent")</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="profile-content">
            <!-- Update Profile Form -->
            <div class="content-card">
                <div class="card-header">
                    <h3><i class="fas fa-user-edit"></i> @(isArabic ? "تعديل البيانات" : "Edit Profile")</h3>
                </div>
                <form asp-action="UpdateProfile" method="post" class="profile-form">
                    @Html.AntiForgeryToken()
                    <div class="form-row">
                        <div class="form-group">
                            <label>@(isArabic ? "الاسم الأول" : "First Name")</label>
                            <input asp-for="FirstName" required />
                        </div>
                        <div class="form-group">
                            <label>@(isArabic ? "الاسم الأخير" : "Last Name")</label>
                            <input asp-for="LastName" required />
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label>@(isArabic ? "رقم الهاتف" : "Phone Number")</label>
                            <input asp-for="PhoneNumber" />
                        </div>
                        <div class="form-group">
                            <label>@(isArabic ? "المدينة" : "City")</label>
                            <input asp-for="City" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label>@(isArabic ? "العنوان" : "Address")</label>
                        <input asp-for="Address" />
                    </div>

                    <button type="submit" class="btn btn-primary">
                        @(isArabic ? "حفظ التغييرات" : "Save Changes")
                    </button>
                </form>
            </div>

            <!-- Order History -->
            <div class="content-card" style="margin-top: 2rem;">
                <div class="card-header">
                    <h3><i class="fas fa-history"></i> @(isArabic ? "سجل الطلبات" : "Order History")</h3>
                </div>
                <div class="orders-list">
                    @if (orders != null && orders.Any())
                    {
                        foreach (var order in orders)
                        {
                            <div class="order-history-item">
                                <div class="order-header">
                                    <div>
                                        <span class="order-id">#@order.Id</span>
                                        <span class="order-date">@order.CreatedAt.ToString("MMM dd, yyyy")</span>
                                    </div>
                                    <span class="order-status @order.Status.ToLower()">@order.Status</span>
                                </div>
                                <div class="order-body">
                                    <div class="order-products">
                                        @foreach (var item in order.OrderItems)
                                        {
                                            <span>@item.ProductName (x@item.Quantity)</span>
                                        }
                                    </div>
                                    <div class="order-total">
                                        @(isArabic ? "الإجمالي:" : "Total:")
                                        <strong>@order.GrandTotal.ToString("F2") OMR</strong>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="no-data">@(isArabic ? "لا توجد طلبات سابقة" : "No orders found")</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .profile-grid {
        display: grid;
        grid-template-columns: 300px 1fr;
        gap: 2rem;
    }

    .user-card {
        background: rgba(26, 26, 46, 0.8);
        border: 1px solid rgba(212, 175, 55, 0.2);
        border-radius: 15px;
        padding: 2rem;
        text-align: center;
    }

    .user-avatar-large {
        width: 100px;
        height: 100px;
        background: #d4af37;
        color: #0f0f1a;
        font-size: 2.5rem;
        font-weight: 700;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        margin: 0 auto 1rem;
    }

    .user-card h3 {
        color: #fff;
        margin-bottom: 0.5rem;
    }

    .user-card p {
        color: #8b8b9e;
        font-size: 0.9rem;
        margin-bottom: 1.5rem;
    }

    .user-stats {
        display: flex;
        justify-content: center;
        gap: 2rem;
        border-top: 1px solid rgba(212, 175, 55, 0.1);
        padding-top: 1.5rem;
    }

    .stat {
        display: flex;
        flex-direction: column;
    }

        .stat .value {
            font-size: 1.25rem;
            font-weight: 700;
            color: #d4af37;
        }

        .stat .label {
            font-size: 0.8rem;
            color: #8b8b9e;
            text-transform: uppercase;
        }

    .content-card {
        background: rgba(26, 26, 46, 0.8);
        border: 1px solid rgba(212, 175, 55, 0.2);
        border-radius: 15px;
        padding: 2rem;
    }

    .card-header {
        border-bottom: 1px solid rgba(212, 175, 55, 0.1);
        padding-bottom: 1rem;
        margin-bottom: 1.5rem;
    }

        .card-header h3 {
            color: #d4af37;
            font-size: 1.25rem;
            margin: 0;
        }

    .profile-form .form-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1rem;
    }

    .form-group {
        margin-bottom: 1rem;
    }

        .form-group label {
            display: block;
            color: #8b8b9e;
            margin-bottom: 0.5rem;
            font-size: 0.9rem;
        }

        .form-group input {
            width: 100%;
            padding: 0.75rem;
            background: rgba(15, 15, 26, 0.6);
            border: 1px solid rgba(212, 175, 55, 0.2);
            border-radius: 8px;
            color: #fff;
        }

            .form-group input:focus {
                outline: none;
                border-color: #d4af37;
            }

    .order-history-item {
        background: rgba(255, 255, 255, 0.03);
        border-radius: 10px;
        padding: 1rem;
        margin-bottom: 1rem;
    }

    .order-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 0.75rem;
        padding-bottom: 0.75rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    }

    .order-id {
        color: #d4af37;
        font-weight: 700;
        margin-right: 0.5rem;
    }

    .order-date {
        color: #8b8b9e;
        font-size: 0.85rem;
    }

    .order-status {
        padding: 0.25rem 0.75rem;
        border-radius: 20px;
        font-size: 0.75rem;
        font-weight: 600;
    }

        .order-status.pending {
            background: rgba(241, 196, 15, 0.1);
            color: #f1c40f;
        }

        .order-status.confirmed {
            background: rgba(52, 152, 219, 0.1);
            color: #3498db;
        }

        .order-status.processing {
            background: rgba(155, 89, 182, 0.1);
            color: #9b59b6;
        }

        .order-status.shipped {
            background: rgba(230, 126, 34, 0.1);
            color: #e67e22;
        }

        .order-status.delivered {
            background: rgba(46, 204, 113, 0.1);
            color: #2ecc71;
        }

        .order-status.cancelled {
            background: rgba(231, 76, 60, 0.1);
            color: #e74c3c;
        }

    .order-body {
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-size: 0.9rem;
    }

    .order-products {
        color: #ccc;
    }

        .order-products span {
            display: block;
        }

    .order-total {
        color: #fff;
    }

        .order-total strong {
            color: #d4af37;
            margin-left: 0.5rem;
        }

    .no-data {
        color: #6c6c7c;
        text-align: center;
        padding: 1rem;
    }

    @@media (max-width: 768px) {
        .profile-grid {
            grid-template-columns: 1fr;
        }

        .profile-form .form-row {
            grid-template-columns: 1fr;
        }
    }
</style>