@model ProductListViewModel
@{
    ViewData["Title"] = System.Globalization.CultureInfo.CurrentCulture.Name == "ar" ? "المنتجات" : "Products";
    var isArabic = System.Globalization.CultureInfo.CurrentCulture.Name == "ar";
}

<!-- Products Page -->
<section class="products-page">
    <div class="container">
        <div class="products-layout">
            <!-- Sidebar Filters -->
            <aside class="filters-sidebar">
                <div class="filter-section">
                    <h4>@(isArabic ? "البحث" : "Search")</h4>
                    <form method="get" class="search-form">
                        <input type="text" name="searchTerm" value="@Model.Filter.SearchTerm" placeholder="@(isArabic ? "ابحث..." : "Search...")" />
                        <button type="submit"><i class="fas fa-search"></i></button>
                    </form>
                </div>

                <div class="filter-section">
                    <h4>@(isArabic ? "الفئات" : "Categories")</h4>
                    <ul class="filter-list">
                        <li>
                            <a href="@Url.Action("Index", new { searchTerm = Model.Filter.SearchTerm, gender = Model.Filter.Gender })" class="@(!Model.Filter.CategoryId.HasValue ? "active" : "")">
                                @(isArabic ? "الكل" : "All")
                            </a>
                        </li>
                        @foreach (var category in Model.Categories)
                        {
                            <li>
                                <a href="@Url.Action("Index", new { categoryId = category.Id, searchTerm = Model.Filter.SearchTerm, gender = Model.Filter.Gender })" class="@(Model.Filter.CategoryId == category.Id ? "active" : "")">
                                    @(isArabic? category.NameAr: category.Name)
                                </a>
                            </li>
                        }
                    </ul>
                </div>

                <div class="filter-section">
                    <h4>@(isArabic ? "الجنس" : "Gender")</h4>
                    <ul class="filter-list">
                        <li>
                            <a href="@Url.Action("Index", new { categoryId = Model.Filter.CategoryId, searchTerm = Model.Filter.SearchTerm })" class="@(string.IsNullOrEmpty(Model.Filter.Gender) ? "active" : "")">
                                @(isArabic ? "الكل" : "All")
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index", new { categoryId = Model.Filter.CategoryId, searchTerm = Model.Filter.SearchTerm, gender = "Men" })" class="@(Model.Filter.Gender == "Men" ? "active" : "")">
                                @(isArabic ? "رجالي" : "Men")
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index", new { categoryId = Model.Filter.CategoryId, searchTerm = Model.Filter.SearchTerm, gender = "Women" })" class="@(Model.Filter.Gender == "Women" ? "active" : "")">
                                @(isArabic ? "نسائي" : "Women")
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index", new { categoryId = Model.Filter.CategoryId, searchTerm = Model.Filter.SearchTerm, gender = "Unisex" })" class="@(Model.Filter.Gender == "Unisex" ? "active" : "")">
                                @(isArabic ? "للجنسين" : "Unisex")
                            </a>
                        </li>
                    </ul>
                </div>

                <div class="filter-section">
                    <h4>@(isArabic ? "نطاق السعر" : "Price Range")</h4>
                    <div class="price-inputs">
                        <input type="number" name="minPrice" placeholder="@(isArabic ? "من" : "Min")" value="@Model.Filter.MinPrice" />
                        <span>-</span>
                        <input type="number" name="maxPrice" placeholder="@(isArabic ? "إلى" : "Max")" value="@Model.Filter.MaxPrice" />
                    </div>
                </div>
            </aside>

            <!-- Products Grid -->
            <div class="products-content">
                <div class="products-header">
                    <p class="results-count">@(isArabic ? $"{Model.TotalItems} منتج" : $"{Model.TotalItems} Products")</p>
                    <div class="sort-dropdown">
                        <label>@(isArabic ? "ترتيب حسب:" : "Sort by:")</label>
                        <select name="sortBy" onchange="window.location.href = updateUrlParameter('sortBy', this.value)">
                            <option value="">@(isArabic ? "الافتراضي" : "Default")</option>
                            <option value="price-low" selected="@(Model.Filter.SortBy == "price-low")">@(isArabic ? "السعر: من الأقل" : "Price: Low to High")</option>
                            <option value="price-high" selected="@(Model.Filter.SortBy == "price-high")">@(isArabic ? "السعر: من الأعلى" : "Price: High to Low")</option>
                            <option value="name" selected="@(Model.Filter.SortBy == "name")">@(isArabic ? "الاسم" : "Name")</option>
                            <option value="newest" selected="@(Model.Filter.SortBy == "newest")">@(isArabic ? "الأحدث" : "Newest")</option>
                        </select>
                    </div>
                </div>

                <div class="products-grid">
                    @foreach (var product in Model.Products)
                    {
                        <div class="product-card animate-fade-up">
                            <div class="product-image">
                                <img src="@(product.ImageUrl ?? "/images/placeholder.jpg")" alt="@(isArabic? product.NameAr: product.Name)" />
                                @if (product.OldPrice.HasValue && product.OldPrice > product.Price)
                                {
                                    var discount = Math.Round((1 - (product.Price / product.OldPrice.Value)) * 100);
                                    <span class="product-badge sale">-@discount%</span>
                                }
                                @if (product.IsNewArrival)
                                {
                                    <span class="product-badge new">@(isArabic ? "جديد" : "New")</span>
                                }
                                <div class="product-actions">
                                    <button class="action-btn wishlist-btn" onclick="toggleWishlist(@product.Id)" data-product-id="@product.Id">
                                        <i class="far fa-heart"></i>
                                    </button>
                                    <a href="/Products/Details/@product.Id" class="action-btn">
                                        <i class="far fa-eye"></i>
                                    </a>
                                    <!-- تم التصحيح هنا: استخدام data-product-id بدلاً من onclick -->
                                    <button class="action-btn add-to-cart-btn" data-product-id="@product.Id">
                                        <i class="fas fa-shopping-bag"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="product-info">
                                <span class="product-brand">@(isArabic? product.BrandAr: product.Brand)</span>
                                <h3 class="product-name">
                                    <a href="/Products/Details/@product.Id">@(isArabic? product.NameAr: product.Name)</a>
                                </h3>
                                <div class="product-price">
                                    <span class="current-price currency-price" data-base-price="@product.Price">@product.Price OMR</span>
                                    @if (product.OldPrice.HasValue && product.OldPrice > product.Price)
                                    {
                                        <span class="old-price currency-old-price" data-base-price="@product.OldPrice">@product.OldPrice OMR</span>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <!-- Pagination -->
                @if (Model.TotalPages > 1)
                {
                    <div class="pagination">
                        @if (Model.Filter.Page > 1)
                        {
                            <a href="@Url.Action("Index", new { page = Model.Filter.Page - 1, categoryId = Model.Filter.CategoryId, gender = Model.Filter.Gender, searchTerm = Model.Filter.SearchTerm, sortBy = Model.Filter.SortBy })" class="page-btn">
                                <i class="fas fa-chevron-left"></i>
                            </a>
                        }

                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            if (i == 1 || i == Model.TotalPages || (i >= Model.Filter.Page - 2 && i <= Model.Filter.Page + 2))
                            {
                                <a href="@Url.Action("Index", new { page = i, categoryId = Model.Filter.CategoryId, gender = Model.Filter.Gender, searchTerm = Model.Filter.SearchTerm, sortBy = Model.Filter.SortBy })" class="page-btn @(i == Model.Filter.Page ? "active" : "")">@i</a>
                            }
                            else if (i == Model.Filter.Page - 3 || i == Model.Filter.Page + 3)
                            {
                                <span class="page-dots">...</span>
                            }
                        }

                        @if (Model.Filter.Page < Model.TotalPages)
                        {
                            <a href="@Url.Action("Index", new { page = Model.Filter.Page + 1, categoryId = Model.Filter.CategoryId, gender = Model.Filter.Gender, searchTerm = Model.Filter.SearchTerm, sortBy = Model.Filter.SortBy })" class="page-btn">
                                <i class="fas fa-chevron-right"></i>
                            </a>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</section>

<style>
    .products-page {
        padding: 6rem 0;
        margin-top: 80px;
    }

    .products-layout {
        display: grid;
        grid-template-columns: 280px 1fr;
        gap: 2rem;
    }

    .filters-sidebar {
        position: sticky;
        top: 100px;
        height: fit-content;
    }

    .filter-section {
        background: #ffffff;
        border: 1px solid rgba(0, 40, 85, 0.1);
        border-radius: 15px;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
        box-shadow: 0 4px 15px rgba(0,0,0,0.03);
    }

        .filter-section h4 {
            font-size: 1rem;
            margin-bottom: 1rem;
            color: #002855;
            font-weight: 700;
        }

    .search-form {
        display: flex;
        gap: 0.5rem;
    }

        .search-form input {
            flex: 1;
            padding: 0.75rem;
            background: #f8f9fa;
            border: 1px solid rgba(0, 40, 85, 0.2);
            border-radius: 8px;
            color: #212529;
            outline: none;
        }

        .search-form button {
            width: 44px;
            background: #002855;
            border: none;
            border-radius: 8px;
            color: #ffffff;
            cursor: pointer;
            transition: 0.3s;
        }

            .search-form button:hover {
                background: #004080;
            }

    .filter-list {
        list-style: none;
    }

        .filter-list li {
            margin-bottom: 0.5rem;
        }

        .filter-list a {
            display: block;
            padding: 0.5rem 0.75rem;
            color: #6c757d;
            border-radius: 8px;
            transition: all 0.2s;
            font-size: 0.95rem;
        }

            .filter-list a:hover,
            .filter-list a.active {
                background: rgba(0, 40, 85, 0.05);
                color: #002855;
                font-weight: 600;
            }

    .price-inputs {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

        .price-inputs input {
            flex: 1;
            padding: 0.75rem;
            background: #f8f9fa;
            border: 1px solid rgba(0, 40, 85, 0.2);
            border-radius: 8px;
            color: #212529;
            width: 100%;
            outline: none;
        }

    .products-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.5rem;
    }

    .results-count {
        color: #6c757d;
        font-weight: 500;
    }

    .sort-dropdown {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

        .sort-dropdown label {
            color: #495057;
            font-size: 0.9rem;
        }

        .sort-dropdown select {
            padding: 0.5rem 1rem;
            background: #f8f9fa;
            border: 1px solid rgba(0, 40, 85, 0.2);
            border-radius: 8px;
            color: #002855;
            cursor: pointer;
            outline: none;
            font-weight: 600;
        }

    .products-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
        gap: 2rem;
    }

    /* Product Card Premium */
    .product-card {
        background: #fff;
        border-radius: 16px;
        overflow: hidden;
        border: 1px solid rgba(0,0,0,0.04);
        transition: 0.4s;
    }

        .product-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 35px rgba(0,40,85,0.08);
        }

    .product-image {
        position: relative;
        height: 320px;
        background: #fcfcfc;
        overflow: hidden;
    }

        .product-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: 0.8s;
        }

    .product-card:hover .product-image img {
        transform: scale(1.08);
    }

    .product-badge {
        position: absolute;
        top: 15px;
        left: 15px;
        z-index: 2;
        padding: 4px 12px;
        border-radius: 50px;
        font-size: 0.7rem;
        font-weight: 800;
        text-transform: uppercase;
    }

        .product-badge.new {
            background: #002855;
            color: #fff;
        }

        .product-badge.sale {
            background: #ef4444;
            color: #fff;
        }

    .product-actions {
        position: absolute;
        bottom: 20px;
        left: 50%;
        transform: translate(-50%, 60px);
        display: flex;
        gap: 10px;
        opacity: 0;
        transition: 0.4s;
        z-index: 3;
        width: 100%;
        justify-content: center;
    }

    .product-card:hover .product-actions {
        transform: translate(-50%, 0);
        opacity: 1;
    }

    .action-btn {
        width: 42px;
        height: 42px;
        border-radius: 50%;
        background: #fff;
        border: 1px solid #eee;
        color: #002855;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        transition: 0.3s;
    }

        .action-btn:hover {
            background: #002855;
            color: #fff;
            border-color: #002855;
        }

    .product-info {
        padding: 1.5rem;
        text-align: center;
    }

    .product-brand {
        font-size: 0.75rem;
        color: #94a3b8;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .product-name {
        margin: 8px 0;
        font-size: 1.1rem;
        font-family: 'Playfair Display', serif;
    }

        .product-name a {
            color: #1e293b;
            transition: 0.3s;
        }

            .product-name a:hover {
                color: #002855;
            }

    .product-price .current-price {
        font-weight: 800;
        color: #002855;
        font-size: 1.2rem;
    }

    .product-price .old-price {
        color: #94a3b8;
        text-decoration: line-through;
        font-size: 0.9rem;
        margin-inline-start: 8px;
    }

    .pagination {
        display: flex;
        justify-content: center;
        gap: 0.5rem;
        margin-top: 3rem;
    }

    .page-btn {
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #ffffff;
        border: 1px solid rgba(0, 40, 85, 0.2);
        border-radius: 8px;
        color: #6c757d;
        transition: all 0.2s;
    }

        .page-btn:hover,
        .page-btn.active {
            background: #002855;
            border-color: #002855;
            color: #ffffff;
        }

    .page-dots {
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #6c6c7c;
    }

    @@media (max-width: 992px) {
        .products-layout {
            grid-template-columns: 1fr;
        }

        .filters-sidebar {
            position: static;
            margin-bottom: 2rem;
        }
    }
</style>

<script>
    function updateUrlParameter(param, value) {
        const url = new URL(window.location.href);
        if (value) {
            url.searchParams.set(param, value);
        } else {
            url.searchParams.delete(param);
        }
        return url.toString();
    }
</script>