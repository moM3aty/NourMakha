@model List<PerfumeStore.Models.ContactMessage>
@{
    ViewData["Title"] = System.Globalization.CultureInfo.CurrentCulture.Name == "ar" ? "رسائل العملاء" : "Customer Messages";
    var isArabic = System.Globalization.CultureInfo.CurrentCulture.Name == "ar";
    Layout = "_AdminLayout";
}

<div class="page-content-wrapper animate-fade-up">
    <!-- Header Section -->
    <div class="page-header-premium">
        <div class="header-content">
            <div class="title-wrapper">
                <div class="icon-box">
                    <i class="fas fa-envelope-open-text"></i>
                </div>
                <div>
                    <h1>@ViewData["Title"]</h1>
                    <p>@(isArabic ? "متابعة استفسارات وشكاوى العملاء الواردة" : "Monitor customer inquiries and incoming feedback")</p>
                </div>
            </div>
            <div class="header-stats-mini">
                <div class="stat-mini">
                    <span class="label">@(isArabic ? "رسائل جديدة" : "New Messages")</span>
                    <span class="value">@Model.Count(m => !m.IsRead)</span>
                </div>
            </div>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success animate-fade-up" style="background: #e8f5e9; color: #2e7d32; padding: 1rem; border-radius: 12px; margin-bottom: 1.5rem; border: 1px solid #c8e6c9; display: flex; align-items: center; gap: 10px;">
            <i class="fas fa-check-circle"></i> @TempData["Success"]
        </div>
    }

    <!-- Filter & Toolbar Section -->
    <div class="toolbar-container animate-fade-up delay-1">
        <div class="search-wrapper">
            <i class="fas fa-search search-icon"></i>
            <input type="text" id="messageSearch" placeholder="@(isArabic ? "بحث باسم المرسل، الموضوع..." : "Search by sender, subject...")" onkeyup="filterMessages()">
        </div>

        <div class="filters-wrapper">
            <div class="select-wrapper">
                <select id="statusFilter" onchange="filterMessages()">
                    <option value="all">@(isArabic ? "كل الرسائل" : "All Messages")</option>
                    <option value="unread">@(isArabic ? "غير مقروءة" : "Unread")</option>
                    <option value="read">@(isArabic ? "مقروءة" : "Read")</option>
                </select>
                <i class="fas fa-chevron-down arrow-icon"></i>
            </div>
        </div>
    </div>

    <!-- Messages Table Card -->
    <div class="table-card animate-fade-up delay-2">
        <div class="table-responsive">
            <table class="premium-table" id="messagesTable">
                <thead>
                    <tr>
                        <th>@(isArabic ? "المرسل" : "Sender")</th>
                        <th>@(isArabic ? "الموضوع" : "Subject")</th>
                        <th width="35%">@(isArabic ? "محتوى الرسالة" : "Message Content")</th>
                        <th>@(isArabic ? "التاريخ" : "Received At")</th>
                        <th class="text-end">@(isArabic ? "إجراءات" : "Actions")</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var msg in Model.OrderByDescending(m => m.CreatedAt))
                    {
                        var rowClass = !msg.IsRead ? "unread" : "read";
                        <tr class="message-row @rowClass"
                            data-search-key="@(msg.Name) @(msg.Email) @(msg.Subject)"
                            data-status="@(msg.IsRead ? "read" : "unread")">

                            <td>
                                <div class="sender-info-cell">
                                    <div class="avatar-char @(!msg.IsRead ? "active" : "")">
                                        @msg.Name.Substring(0, 1).ToUpper()
                                    </div>
                                    <div class="txt">
                                        <h4 class="name">@msg.Name</h4>
                                        <span class="email">@msg.Email</span>
                                        <span class="phone"><i class="fas fa-phone-alt"></i> @msg.Phone</span>
                                    </div>
                                </div>
                            </td>

                            <td>
                                <span class="subject-pill @(!msg.IsRead ? "new" : "")">
                                    @if (!msg.IsRead)
                                    {
                                        <i class="fas fa-circle notification-dot"></i>
                                    }
                                    @msg.Subject
                                </span>
                            </td>

                            <td>
                                <p class="message-preview" title="@msg.Message">
                                    @msg.Message
                                </p>
                            </td>

                            <td>
                                <div class="date-group">
                                    <span class="date">@msg.CreatedAt.ToString("dd MMM")</span>
                                    <span class="time">@msg.CreatedAt.ToString("HH:mm")</span>
                                </div>
                            </td>

                            <td>
                                <div class="actions-group">
                                    <a href="mailto:@msg.Email" class="action-btn reply" title="@(isArabic ? "رد" : "Reply")">
                                        <i class="fas fa-reply"></i>
                                    </a>

                                    <!-- Mark as Read Button (If using AJAX in future, this can be updated) -->
                                    <form action="/Admin/MarkAsRead/@msg.Id" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="action-btn check" title="@(isArabic ? "تحديد كمقروء" : "Mark as Read")" @(msg.IsRead ? "disabled style=opacity:0.5" : "")>
                                            <i class="fas fa-check"></i>
                                        </button>
                                    </form>

                                    <form action="/Admin/DeleteMessage/@msg.Id" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="action-btn delete" onclick="return confirm('@(isArabic ? "تأكيد حذف الرسالة؟" : "Confirm delete message?")')" title="@(isArabic ? "حذف" : "Delete")">
                                            <i class="far fa-trash-alt"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @if (!Model.Any())
            {
                <div class="empty-data">
                    <div class="empty-icon-box">
                        <i class="far fa-envelope-open"></i>
                    </div>
                    <h3>@(isArabic ? "صندوق الوارد فارغ" : "Inbox is Empty")</h3>
                    <p>@(isArabic ? "لا توجد رسائل جديدة من العملاء حالياً" : "No new messages from customers at the moment")</p>
                </div>
            }
        </div>
    </div>
</div>

<style>
    /* --- Layout & Header --- */
    .page-content-wrapper {
        padding: 1rem;
    }

    .page-header-premium {
        background: #fff;
        padding: 2rem;
        border-radius: 20px;
        margin-bottom: 2rem;
        border: 1px solid rgba(0, 40, 85, 0.05);
        box-shadow: 0 4px 20px rgba(0,0,0,0.02);
    }

    .header-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 1.5rem;
    }

    .title-wrapper {
        display: flex;
        align-items: center;
        gap: 1.2rem;
    }

    .icon-box {
        width: 54px;
        height: 54px;
        background: linear-gradient(135deg, #002855, #004080);
        border-radius: 14px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #fff;
        font-size: 1.4rem;
        box-shadow: 0 10px 20px rgba(0, 40, 85, 0.15);
    }

    .title-wrapper h1 {
        font-size: 1.6rem;
        color: #1e293b;
        margin: 0;
        font-family: 'Tajawal', sans-serif;
    }

    .title-wrapper p {
        color: #64748b;
        margin: 5px 0 0;
        font-size: 0.95rem;
    }

    .header-stats-mini {
        background: #f8fafc;
        padding: 0.5rem 1.5rem;
        border-radius: 12px;
        border: 1px solid #e2e8f0;
    }

    .stat-mini .label {
        font-size: 0.75rem;
        color: #94a3b8;
        text-transform: uppercase;
    }

    .stat-mini .value {
        font-size: 1.2rem;
        font-weight: 800;
        color: #002855;
    }

    /* --- Toolbar --- */
    .toolbar-container {
        display: flex;
        justify-content: space-between;
        gap: 1rem;
        margin-bottom: 1.5rem;
        flex-wrap: wrap;
    }

    .search-wrapper {
        position: relative;
        flex: 1;
        min-width: 300px;
    }

        .search-wrapper input {
            width: 100%;
            padding: 0.9rem 1.2rem;
            padding-inline-start: 3rem;
            background: #fff;
            border: 1px solid #e2e8f0;
            border-radius: 14px;
            transition: 0.3s;
        }

            .search-wrapper input:focus {
                border-color: #002855;
                box-shadow: 0 0 0 4px rgba(0, 40, 85, 0.05);
                outline: none;
            }

    .search-icon {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        inset-inline-start: 1.2rem;
        color: #94a3b8;
    }

    .select-wrapper {
        position: relative;
        min-width: 160px;
    }

        .select-wrapper select {
            width: 100%;
            padding: 0.8rem 1.2rem;
            border-radius: 12px;
            background: #fff;
            border: 1px solid #e2e8f0;
            color: #475569;
            appearance: none;
            cursor: pointer;
            font-weight: 600;
        }

    .arrow-icon {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        inset-inline-end: 1rem;
        color: #94a3b8;
        pointer-events: none;
    }

    /* --- Table Styles --- */
    .table-card {
        background: #fff;
        border-radius: 20px;
        border: 1px solid #e2e8f0;
        overflow: hidden;
        box-shadow: 0 4px 25px rgba(0,0,0,0.03);
    }

    .premium-table {
        width: 100%;
        border-collapse: collapse;
    }

        .premium-table th {
            padding: 1.2rem 1.5rem;
            text-align: start;
            color: #64748b;
            font-size: 0.85rem;
            text-transform: uppercase;
            border-bottom: 1px solid #e2e8f0;
            background: #f8fafc;
        }

        .premium-table td {
            padding: 1.2rem 1.5rem;
            border-bottom: 1px solid #f1f5f9;
            vertical-align: middle;
        }

    /* Message Row Styles */
    .message-row {
        transition: 0.2s;
    }

        .message-row:hover {
            background-color: #fafbfc;
        }

        .message-row.unread td {
            background-color: rgba(240, 249, 255, 0.5);
        }

        .message-row.unread .name, .message-row.unread .subject-pill {
            font-weight: 800;
            color: #002855;
        }

    .sender-info-cell {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .avatar-char {
        width: 45px;
        height: 45px;
        background: #f1f5f9;
        color: #64748b;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        font-size: 1.2rem;
        border: 1px solid #e2e8f0;
    }

        .avatar-char.active {
            background: #eff6ff;
            color: #002855;
            border-color: #bfdbfe;
        }

    .sender-info-cell .txt {
        display: flex;
        flex-direction: column;
    }

    .sender-info-cell .name {
        font-size: 0.95rem;
        margin: 0;
        color: #1e293b;
    }

    .sender-info-cell .email {
        font-size: 0.8rem;
        color: #64748b;
    }

    .sender-info-cell .phone {
        font-size: 0.75rem;
        color: #94a3b8;
        margin-top: 2px;
    }

        .sender-info-cell .phone i {
            font-size: 0.7rem;
        }

    .subject-pill {
        background: #f8fafc;
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 0.85rem;
        color: #475569;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        border: 1px solid #f1f5f9;
        max-width: 200px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

        .subject-pill.new {
            background: #fff;
            border-color: #bfdbfe;
            color: #002855;
        }

    .notification-dot {
        color: #ef4444;
        font-size: 0.5rem;
    }

    .message-preview {
        color: #64748b;
        font-size: 0.9rem;
        line-height: 1.5;
        margin: 0;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        max-width: 400px;
    }

    .date-group {
        display: flex;
        flex-direction: column;
        text-align: center;
    }

        .date-group .date {
            font-weight: 700;
            color: #1e293b;
            font-size: 0.9rem;
        }

        .date-group .time {
            font-size: 0.75rem;
            color: #94a3b8;
        }

    /* Actions */
    .actions-group {
        display: flex;
        gap: 8px;
        justify-content: flex-end;
    }

    .action-btn {
        width: 36px;
        height: 36px;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #fff;
        border: 1px solid #e2e8f0;
        color: #64748b;
        transition: 0.2s;
        cursor: pointer;
    }

        .action-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 10px rgba(0,0,0,0.05);
        }

        .action-btn.reply:hover {
            color: #002855;
            border-color: #002855;
        }

        .action-btn.check:hover {
            color: #10b981;
            border-color: #10b981;
        }

        .action-btn.delete:hover {
            color: #ef4444;
            border-color: #ef4444;
        }

    /* Empty State */
    .empty-data {
        padding: 4rem;
        text-align: center;
        color: #cbd5e1;
    }

    .empty-icon-box {
        width: 80px;
        height: 80px;
        background: #f8fafc;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1.5rem;
        color: #cbd5e1;
        font-size: 2.5rem;
    }

    .empty-data h3 {
        color: #002855;
        margin-bottom: 0.5rem;
        font-size: 1.2rem;
    }

    @@media (max-width: 992px) {
        .toolbar-container {
            flex-direction: column;
            align-items: stretch;
        }

        .premium-table th:nth-child(2), .premium-table td:nth-child(2) {
            display: none;
        }
        /* Hide Subject on mobile */
    }
</style>

<script>
    function filterMessages() {
        const searchText = document.getElementById('messageSearch').value.toLowerCase();
        const statusFilter = document.getElementById('statusFilter').value;
        const rows = document.querySelectorAll('.message-row');

        rows.forEach(row => {
            const key = row.getAttribute('data-search-key').toLowerCase();
            const status = row.getAttribute('data-status');

            let matchesSearch = key.includes(searchText);
            let matchesStatus = statusFilter === 'all' || status === statusFilter;

            if (matchesSearch && matchesStatus) {
                row.style.display = "";
            } else {
                row.style.display = "none";
            }
        });
    }
</script>