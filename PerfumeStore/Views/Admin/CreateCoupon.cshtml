@model PerfumeStore.Models.Coupon
@{
    ViewData["Title"] = System.Globalization.CultureInfo.CurrentCulture.Name == "ar" ? "إضافة كوبون" : "Add Coupon";
    var isArabic = System.Globalization.CultureInfo.CurrentCulture.Name == "ar";
    Layout = "_AdminLayout";
}

<div class="page-header">
    <div class="header-left">
        <h1>@(isArabic ? "إضافة كوبون جديد" : "Add New Coupon")</h1>
    </div>
    <div class="header-right">
        <a href="/Admin/Coupons" class="btn btn-outline">
            <i class="fas fa-arrow-left"></i>
            @(isArabic ? "العودة" : "Back")
        </a>
    </div>
</div>

<div class="card">
    <div class="card-body" style="padding: 2rem;">
        <form asp-action="CreateCoupon" method="post" class="coupon-form">
            @Html.AntiForgeryToken()

            <div class="form-grid">
                <div class="form-group">
                    <label asp-for="Code">@(isArabic ? "كود الكوبون" : "Coupon Code") *</label>
                    <input asp-for="Code" placeholder="@(isArabic ? "مثال: A11" : "e.g., A11")" required style="text-transform: uppercase;" />
                </div>

                <div class="form-group">
                    <label asp-for="DiscountType">@(isArabic ? "نوع الخصم" : "Discount Type") *</label>
                    <select asp-for="DiscountType" required>
                        <option value="Percentage">@(isArabic ? "نسبة مئوية (%)" : "Percentage (%)")</option>
                        <option value="Fixed">@(isArabic ? "مبلغ ثابت ($)" : "Fixed Amount ($)")</option>
                    </select>
                </div>

                <div class="form-group">
                    <label asp-for="DiscountValue">@(isArabic ? "قيمة الخصم" : "Discount Value") *</label>
                    <input asp-for="DiscountValue" type="number" step="0.01" required />
                </div>

                <div class="form-group">
                    <label asp-for="MinimumOrderAmount">@(isArabic ? "الحد الأدنى للطلب" : "Minimum Order Amount")</label>
                    <input asp-for="MinimumOrderAmount" type="number" step="0.01" />
                </div>

                <div class="form-group">
                    <label asp-for="MaximumDiscountAmount">@(isArabic ? "الحد الأقصى للخصم" : "Maximum Discount")</label>
                    <input asp-for="MaximumDiscountAmount" type="number" step="0.01" />
                </div>

                <div class="form-group">
                    <label asp-for="UsageLimit">@(isArabic ? "حد الاستخدام" : "Usage Limit")</label>
                    <input asp-for="UsageLimit" type="number" placeholder="@(isArabic ? "اتركه فارغاً لغير محدود" : "Leave empty for unlimited")" />
                </div>

                <div class="form-group">
                    <label asp-for="StartDate">@(isArabic ? "تاريخ البداية" : "Start Date")</label>
                    <input asp-for="StartDate" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                </div>

                <div class="form-group">
                    <label asp-for="EndDate">@(isArabic ? "تاريخ النهاية" : "End Date")</label>
                    <input asp-for="EndDate" type="date" value="@DateTime.Now.AddYears(1).ToString("yyyy-MM-dd")" />
                </div>
            </div>

            <div class="form-group" style="margin-top: 1.5rem;">
                <label class="checkbox-label">
                    <input asp-for="IsActive" checked />
                    <span class="checkmark"></span>
                    @(isArabic ? "نشط" : "Active")
                </label>
            </div>

            <div class="form-actions" style="margin-top: 2rem;">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i>
                    @(isArabic ? "حفظ الكوبون" : "Save Coupon")
                </button>
            </div>
        </form>
    </div>
</div>

<style>
    .form-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1.5rem;
    }

    .form-group {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

        .form-group label {
            font-size: 0.875rem;
            font-weight: 500;
            color: var(--text-secondary);
        }

        .form-group input,
        .form-group select {
            padding: 0.75rem;
            background: #f8f9fa;
            border: 1px solid rgba(0, 40, 85, 0.2);
            border-radius: 8px;
            color: var(--text-primary);
            font-size: 1rem;
        }

            .form-group input:focus,
            .form-group select:focus {
                outline: none;
                border-color: #002855;
            }

    .checkbox-label {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        cursor: pointer;
    }

        .checkbox-label input {
            width: 18px;
            height: 18px;
            accent-color: #002855;
        }

    @@media (max-width: 768px) {
        .form-grid {
            grid-template-columns: 1fr;
        }
    }
</style>