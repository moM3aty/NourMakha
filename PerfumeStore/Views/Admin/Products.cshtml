@model List<PerfumeStore.Models.Product>
@{
    ViewData["Title"] = System.Globalization.CultureInfo.CurrentCulture.Name == "ar" ? "المنتجات" : "Products";
    var isArabic = System.Globalization.CultureInfo.CurrentCulture.Name == "ar";
    Layout = "_AdminLayout";
}

<div class="page-content-wrapper animate-fade-up">
    <!-- Header Section -->
    <div class="page-header-premium">
        <div class="header-content">
            <div class="title-wrapper">
                <div class="icon-box">
                    <i class="fas fa-box-open"></i>
                </div>
                <div>
                    <h1>@(isArabic ? "إدارة المخزون والمنتجات" : "Inventory & Products")</h1>
                    <p>@(isArabic ? "تحكم كامل في منتجات المتجر، الأسعار، والمخزون" : "Full control over store products, pricing, and inventory")</p>
                </div>
            </div>
            <a href="/Admin/CreateProduct" class="btn-add-new">
                <i class="fas fa-plus"></i>
                <span>@(isArabic ? "منتج جديد" : "New Product")</span>
            </a>
        </div>
    </div>

    <!-- Filter & Search Toolbar -->
    <div class="toolbar-container">
        <div class="search-wrapper">
            <i class="fas fa-search search-icon"></i>
            <input type="text" id="searchInput" placeholder="@(isArabic ? "ابحث باسم المنتج، الماركة، أو الفئة..." : "Search product, brand, or category...")" onkeyup="filterTable()">
        </div>

        <div class="filters-wrapper">
            <div class="select-wrapper">
                <select id="statusFilter" onchange="filterTable()">
                    <option value="">@(isArabic ? "كل الحالات" : "All Status")</option>
                    <option value="active">@(isArabic ? "نشط" : "Active")</option>
                    <option value="inactive">@(isArabic ? "غير نشط" : "Inactive")</option>
                </select>
                <i class="fas fa-chevron-down arrow-icon"></i>
            </div>

            <div class="select-wrapper">
                <select id="stockFilter" onchange="filterTable()">
                    <option value="">@(isArabic ? "كل المخزون" : "All Stock")</option>
                    <option value="instock">@(isArabic ? "متوفر" : "In Stock")</option>
                    <option value="lowstock">@(isArabic ? "منخفض" : "Low Stock")</option>
                    <option value="outstock">@(isArabic ? "نفذت الكمية" : "Out of Stock")</option>
                </select>
                <i class="fas fa-chevron-down arrow-icon"></i>
            </div>
        </div>
    </div>

    <!-- Products Table Card -->
    <div class="table-card">
        <div class="table-responsive">
            <table class="premium-table" id="productsTable">
                <thead>
                    <tr>
                        <th width="35%">@(isArabic ? "تفاصيل المنتج" : "Product Details")</th>
                        <th>@(isArabic ? "الفئة" : "Category")</th>
                        <th>@(isArabic ? "السعر" : "Price")</th>
                        <th>@(isArabic ? "حالة المخزون" : "Stock Status")</th>
                        <th>@(isArabic ? "الحالة" : "Status")</th>
                        <th class="text-end">@(isArabic ? "إجراءات" : "Actions")</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        var stockClass = product.StockQuantity > 10 ? "instock" : (product.StockQuantity > 0 ? "lowstock" : "outstock");
                        var statusClass = product.IsActive ? "active" : "inactive";

                        <tr class="product-row" data-status="@statusClass" data-stock="@stockClass">
                            <td>
                                <div class="product-info-cell">
                                    <div class="img-box">
                                        <img src="@(product.ImageUrl ?? "/images/placeholder.jpg")" alt="@product.Name" loading="lazy" />
                                    </div>
                                    <div class="txt-content">
                                        <h4 class="name">@(isArabic? product.NameAr: product.Name)</h4>
                                        <span class="brand">
                                            <i class="fas fa-tag"></i> @(isArabic? product.BrandAr: product.Brand)
                                        </span>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="category-pill">
                                    @(isArabic? product.Category?.NameAr : product.Category?.Name)
                                </div>
                            </td>
                            <td>
                                <div class="price-stack">
                                    <span class="curr-price">@product.Price.ToString("N2") <small>OMR</small></span>
                                    @if (product.OldPrice.HasValue)
                                    {
                                        <span class="old-price">@product.OldPrice.Value.ToString("N2")</span>
                                    }
                                </div>
                            </td>
                            <td>
                                <div class="stock-indicator @stockClass">
                                    <div class="indicator-dot"></div>
                                    <div class="indicator-info">
                                        <span class="status-label">
                                            @if (product.StockQuantity == 0)
                                            {
                                                @(isArabic ? "نفذت الكمية" : "Out of Stock")
                                            }
                                            else if (product.StockQuantity <= 10)
                                            {
                                                @(isArabic ? "مخزون منخفض" : "Low Stock")
                                            }
                                            else
                                            {
                                                @(isArabic ? "متوفر" : "In Stock")
                                            }
                                        </span>
                                        <span class="qty-count">@product.StockQuantity @(isArabic ? "قطعة" : "pcs")</span>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <label class="status-toggle" title="@(product.IsActive ? "نشط" : "معطل")">
                                    <input type="checkbox" @(product.IsActive ? "checked" : "") disabled>
                                    <span class="slider"></span>
                                </label>
                            </td>
                            <td>
                                <div class="actions-group">
                                    <a href="/Admin/EditProduct/@product.Id" class="action-btn edit" title="@(isArabic ? "تعديل" : "Edit")">
                                        <i class="fas fa-pen"></i>
                                    </a>
                                    <a href="/Products/Details/@product.Id" class="action-btn view" title="@(isArabic ? "معاينة" : "View")" target="_blank">
                                        <i class="fas fa-external-link-alt"></i>
                                    </a>
                                    <form action="/Admin/DeleteProduct/@product.Id" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="action-btn delete" onclick="return confirm('@(isArabic ? "تأكيد الحذف؟ لا يمكن التراجع." : "Confirm deletion? This cannot be undone.")')" title="@(isArabic ? "حذف" : "Delete")">
                                            <i class="far fa-trash-alt"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            @if (!Model.Any())
            {
                <div class="empty-data">
                    <div class="empty-img">
                        <i class="fas fa-box-open"></i>
                    </div>
                    <h3>@(isArabic ? "لا توجد منتجات حتى الآن" : "No Products Found")</h3>
                    <p>@(isArabic ? "ابدأ بإضافة منتجاتك الجديدة من الزر في الأعلى" : "Start adding your new products from the button above")</p>
                </div>
            }
        </div>
    </div>
</div>

<style>
    /* --- Variables --- */
    :root {
        --primary-blue: #002855;
        --primary-light: #e6f0ff;
        --secondary-text: #64748b;
        --border-light: #e2e8f0;
        --bg-white: #ffffff;
        --success: #10b981;
        --warning: #f59e0b;
        --danger: #ef4444;
        --shadow-soft: 0 4px 20px rgba(0,0,0,0.03);
        --shadow-hover: 0 10px 25px rgba(0,0,0,0.06);
    }

    /* --- Page Header --- */
    .page-header-premium {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
    }

    .header-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
        width: 100%;
        flex-wrap: wrap;
        gap: 1rem;
    }

    .title-wrapper {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .icon-box {
        width: 50px;
        height: 50px;
        background: linear-gradient(135deg, var(--primary-blue), #004080);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #fff;
        font-size: 1.5rem;
        box-shadow: 0 4px 10px rgba(0, 40, 85, 0.2);
    }

    .title-wrapper h1 {
        font-size: 1.6rem;
        font-weight: 700;
        color: #1e293b;
        margin: 0;
        font-family: 'Tajawal', sans-serif;
    }

    .title-wrapper p {
        color: var(--secondary-text);
        margin: 4px 0 0;
        font-size: 0.9rem;
    }

    .btn-add-new {
        background: var(--primary-blue);
        color: #fff;
        padding: 0.8rem 1.5rem;
        border-radius: 12px;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-weight: 600;
        transition: all 0.3s ease;
        box-shadow: 0 4px 12px rgba(0, 40, 85, 0.15);
    }

        .btn-add-new:hover {
            background: #003377;
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(0, 40, 85, 0.25);
            color: #fff;
        }

    /* --- Toolbar (Filter & Search) --- */
    .toolbar-container {
        background: var(--bg-white);
        padding: 1rem;
        border-radius: 16px;
        border: 1px solid var(--border-light);
        display: flex;
        gap: 1rem;
        margin-bottom: 1.5rem;
        flex-wrap: wrap;
        box-shadow: var(--shadow-soft);
    }

    .search-wrapper {
        flex: 1;
        position: relative;
        min-width: 280px;
    }

        .search-wrapper input {
            width: 100%;
            padding: 0.9rem 2.8rem;
            border: 1px solid var(--border-light);
            border-radius: 12px;
            background: #f8fafc;
            font-size: 0.95rem;
            transition: all 0.3s;
        }

            .search-wrapper input:focus {
                background: #fff;
                border-color: var(--primary-blue);
                box-shadow: 0 0 0 3px rgba(0, 40, 85, 0.1);
                outline: none;
            }

    .search-icon {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        right: 15px; /* RTL */
        color: #94a3b8;
    }

    body:not(.rtl) .search-icon {
        right: auto;
        left: 15px;
    }

    .filters-wrapper {
        display: flex;
        gap: 1rem;
    }

    .select-wrapper {
        position: relative;
        min-width: 160px;
    }

        .select-wrapper select {
            width: 100%;
            padding: 0.9rem 1rem;
            appearance: none;
            border: 1px solid var(--border-light);
            border-radius: 12px;
            background: #fff;
            color: #475569;
            font-size: 0.9rem;
            cursor: pointer;
            transition: border-color 0.3s;
        }

            .select-wrapper select:hover {
                border-color: #cbd5e1;
            }

            .select-wrapper select:focus {
                border-color: var(--primary-blue);
                outline: none;
            }

    .arrow-icon {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        left: 15px; /* RTL */
        color: #94a3b8;
        font-size: 0.8rem;
        pointer-events: none;
    }

    body:not(.rtl) .arrow-icon {
        left: auto;
        right: 15px;
    }

    /* --- Table Styles --- */
    .table-card {
        background: var(--bg-white);
        border-radius: 16px;
        border: 1px solid var(--border-light);
        box-shadow: var(--shadow-soft);
        overflow: hidden;
    }

    .premium-table {
        width: 100%;
        border-collapse: collapse;
    }

        .premium-table thead {
            background: #f8fafc;
            border-bottom: 1px solid var(--border-light);
        }

        .premium-table th {
            padding: 1.2rem 1.5rem;
            text-align: right; /* RTL */
            font-size: 0.85rem;
            font-weight: 700;
            color: #64748b;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

    body:not(.rtl) .premium-table th {
        text-align: left;
    }

    .premium-table tbody tr {
        border-bottom: 1px solid var(--border-light);
        transition: background-color 0.2s;
    }

        .premium-table tbody tr:hover {
            background-color: #f8fafc;
        }

        .premium-table tbody tr:last-child {
            border-bottom: none;
        }

    .premium-table td {
        padding: 1rem 1.5rem;
        vertical-align: middle;
    }

    /* Product Info Cell */
    .product-info-cell {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .img-box {
        width: 55px;
        height: 55px;
        border-radius: 10px;
        overflow: hidden;
        border: 1px solid #e2e8f0;
        flex-shrink: 0;
    }

        .img-box img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .txt-content .name {
        font-size: 0.95rem;
        font-weight: 700;
        color: #1e293b;
        margin: 0 0 4px;
        line-height: 1.4;
    }

    .txt-content .brand {
        font-size: 0.8rem;
        color: #64748b;
        display: flex;
        align-items: center;
        gap: 4px;
    }

    /* Category Pill */
    .category-pill {
        display: inline-block;
        padding: 5px 12px;
        background: #eff6ff;
        color: var(--primary-blue);
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 500;
        border: 1px solid rgba(0, 40, 85, 0.1);
    }

    /* Price Stack */
    .price-stack {
        display: flex;
        flex-direction: column;
    }

        .price-stack .curr-price {
            font-weight: 700;
            color: #1e293b;
            font-size: 1rem;
        }

        .price-stack .old-price {
            font-size: 0.8rem;
            color: #94a3b8;
            text-decoration: line-through;
        }

    /* Stock Status */
    .stock-indicator {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .indicator-dot {
        width: 10px;
        height: 10px;
        border-radius: 50%;
        flex-shrink: 0;
    }

    .indicator-info {
        display: flex;
        flex-direction: column;
    }

    .status-label {
        font-size: 0.85rem;
        font-weight: 600;
    }

    .qty-count {
        font-size: 0.75rem;
        color: #64748b;
    }

    /* Stock Colors */
    .instock .indicator-dot {
        background: var(--success);
        box-shadow: 0 0 0 2px rgba(16, 185, 129, 0.2);
    }

    .instock .status-label {
        color: var(--success);
    }

    .lowstock .indicator-dot {
        background: var(--warning);
        box-shadow: 0 0 0 2px rgba(245, 158, 11, 0.2);
    }

    .lowstock .status-label {
        color: var(--warning);
    }

    .outstock .indicator-dot {
        background: var(--danger);
        box-shadow: 0 0 0 2px rgba(239, 68, 68, 0.2);
    }

    .outstock .status-label {
        color: var(--danger);
    }

    /* Switch Toggle */
    .status-toggle {
        position: relative;
        display: inline-block;
        width: 44px;
        height: 24px;
    }

        .status-toggle input {
            opacity: 0;
            width: 0;
            height: 0;
        }

    .slider {
        position: absolute;
        cursor: default; /* Disabled in list view */
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: #cbd5e1;
        transition: .4s;
        border-radius: 34px;
    }

        .slider:before {
            position: absolute;
            content: "";
            height: 18px;
            width: 18px;
            left: 3px;
            bottom: 3px;
            background-color: white;
            transition: .4s;
            border-radius: 50%;
        }

    input:checked + .slider {
        background-color: var(--primary-blue);
    }

        input:checked + .slider:before {
            transform: translateX(20px);
        }

    /* Action Buttons */
    .actions-group {
        display: flex;
        gap: 8px;
        justify-content: flex-end; /* RTL: left aligned usually, but text-end pushes it */
    }

    .action-btn {
        width: 36px;
        height: 36px;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.2s;
        border: 1px solid transparent;
        background: transparent;
        color: #64748b;
    }

        .action-btn:hover {
            background: #f1f5f9;
            color: #1e293b;
        }

        .action-btn.edit:hover {
            color: var(--primary-blue);
            background: rgba(0, 40, 85, 0.08);
        }

        .action-btn.view:hover {
            color: #3b82f6;
            background: rgba(59, 130, 246, 0.1);
        }

        .action-btn.delete:hover {
            color: #ef4444;
            background: rgba(239, 68, 68, 0.1);
        }

    /* Empty State */
    .empty-data {
        padding: 4rem 2rem;
        text-align: center;
    }

    .empty-img {
        font-size: 3rem;
        color: #cbd5e1;
        margin-bottom: 1rem;
    }

    .empty-data h3 {
        font-size: 1.2rem;
        color: #1e293b;
        margin-bottom: 0.5rem;
    }

    .empty-data p {
        color: #64748b;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .toolbar-container {
            flex-direction: column;
        }

        .filters-wrapper {
            width: 100%;
            flex-wrap: wrap;
        }

        .select-wrapper {
            flex: 1;
        }

        .search-wrapper {
            width: 100%;
        }

        .premium-table th:nth-child(2), .premium-table td:nth-child(2),
        .premium-table th:nth-child(5), .premium-table td:nth-child(5) {
            display: none; /* Hide Category & Status on mobile */
        }
    }
</style>

<script>
    function filterTable() {
        const searchText = document.getElementById('searchInput').value.toLowerCase();
        const statusFilter = document.getElementById('statusFilter').value;
        const stockFilter = document.getElementById('stockFilter').value;

        const rows = document.querySelectorAll('.product-row');

        rows.forEach(row => {
            const name = row.querySelector('.name').textContent.toLowerCase();
            const brand = row.querySelector('.brand').textContent.toLowerCase();
            const rowStatus = row.getAttribute('data-status');
            const rowStock = row.getAttribute('data-stock');

            // Logic conditions
            const matchesSearch = name.includes(searchText) || brand.includes(searchText);
            const matchesStatus = statusFilter === "" || rowStatus === statusFilter;
            const matchesStock = stockFilter === "" || rowStock === stockFilter;

            if (matchesSearch && matchesStatus && matchesStock) {
                row.style.display = "";
            } else {
                row.style.display = "none";
            }
        });
    }
</script>