@model PerfumeStore.Models.Banner
@{
    ViewData["Title"] = "تعديل البنر";
    Layout = "_AdminLayout";
}

<div class="page-content-wrapper animate-fade-up">
    <form asp-action="EditBanner" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="ImageUrl" />

        <div class="form-header-action">
            <div class="header-text">
                <h1>تعديل البنر</h1>
                <p>تحديث محتوى العرض الترويجي الحالي</p>
            </div>
            <div class="header-btns">
                <a href="/Admin/Banners" class="btn-cancel">عودة</a>
                <button type="submit" class="btn-save">
                    <i class="fas fa-check"></i> حفظ التعديلات
                </button>
            </div>
        </div>

        <div class="form-layout-grid">
            <!-- Left: Image & General Settings -->
            <div class="col-visual">
                <div class="card premium-card">
                    <div class="card-header-clean">
                        <h3>الصورة</h3>
                    </div>
                    <div class="card-body">
                        <div class="upload-area" id="uploadZone">
                            <input type="file" name="image" id="imageInput" accept="image/*" class="file-input" />

                            <!-- Current Image Logic -->
                            <div id="currentDisplay" class="preview-box show" style="z-index: 1;">
                                <img src="@(Model.ImageUrl ?? "/images/placeholder.jpg")" style="opacity: 1;" />
                                <div class="overlay-edit">
                                    <i class="fas fa-camera"></i> تغيير الصورة
                                </div>
                            </div>

                            <!-- New Preview -->
                            <div id="newPreview" class="preview-box" style="z-index: 5; display:none;">
                                <img id="imgPreview" src="" />
                                <button type="button" class="btn-remove" onclick="restoreOriginal()"><i class="fas fa-undo"></i></button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card premium-card mt-3">
                    <div class="card-header-clean">
                        <h3>الإعدادات</h3>
                    </div>
                    <div class="card-body">
                        <div class="form-group-modern">
                            <label>رابط التوجيه</label>
                            <input asp-for="LinkUrl" dir="ltr" />
                        </div>
                        <div class="form-group-modern">
                            <label>ترتيب العرض</label>
                            <input asp-for="DisplayOrder" type="number" />
                        </div>
                        <div class="toggle-row">
                            <span class="label">تفعيل البنر</span>
                            <label class="switch">
                                <input asp-for="IsActive" type="checkbox" />
                                <span class="slider"></span>
                            </label>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right: Content Tabs -->
            <div class="col-content">
                <div class="card premium-card h-100">
                    <div class="tabs-header">
                        <button type="button" class="tab-btn active" onclick="openTab('ar')">
                            <img src="https://flagcdn.com/w20/om.png" alt="AR" /> المحتوى العربي
                        </button>
                        <button type="button" class="tab-btn" onclick="openTab('en')">
                            <img src="https://flagcdn.com/w20/gb.png" alt="EN" /> المحتوى الإنجليزي
                        </button>
                    </div>

                    <div class="card-body">
                        <!-- Arabic Tab -->
                        <div id="tab-ar" class="tab-content active">
                            <div class="form-group-modern">
                                <label>العنوان الرئيسي <span class="req">*</span></label>
                                <input asp-for="TitleAr" dir="rtl" />
                                <span asp-validation-for="TitleAr" class="validation-msg"></span>
                            </div>
                            <div class="form-group-modern">
                                <label>العنوان الفرعي</label>
                                <input asp-for="SubtitleAr" dir="rtl" />
                            </div>
                            <div class="form-group-modern">
                                <label>الوصف</label>
                                <textarea asp-for="DescriptionAr" rows="4" dir="rtl"></textarea>
                            </div>
                            <div class="form-group-modern">
                                <label>نص الزر</label>
                                <input asp-for="ButtonTextAr" dir="rtl" />
                            </div>
                        </div>

                        <!-- English Tab -->
                        <div id="tab-en" class="tab-content">
                            <div class="form-group-modern">
                                <label>Main Title <span class="req">*</span></label>
                                <input asp-for="Title" dir="ltr" required />
                                <span asp-validation-for="Title" class="validation-msg"></span>
                            </div>
                            <div class="form-group-modern">
                                <label>Subtitle</label>
                                <input asp-for="Subtitle" dir="ltr" />
                            </div>
                            <div class="form-group-modern">
                                <label>Description</label>
                                <textarea asp-for="Description" rows="4" dir="ltr"></textarea>
                            </div>
                            <div class="form-group-modern">
                                <label>Button Text</label>
                                <input asp-for="ButtonText" dir="ltr" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<style>
    /* Reuse same styles from CreateBanner */
    .form-header-action {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
    }

    .header-text h1 {
        font-size: 1.8rem;
        color: #002855;
        margin: 0;
    }

    .header-text p {
        color: #64748b;
        margin: 5px 0 0;
    }

    .header-btns {
        display: flex;
        gap: 10px;
    }

    .btn-save {
        background: #002855;
        color: #fff;
        padding: 0.8rem 2rem;
        border-radius: 50px;
        font-weight: 700;
        border: none;
        display: flex;
        align-items: center;
        gap: 8px;
        transition: 0.3s;
        box-shadow: 0 5px 15px rgba(0,40,85,0.2);
    }

        .btn-save:hover {
            transform: translateY(-2px);
            background: #003377;
        }

    .btn-cancel {
        background: #fff;
        border: 1px solid #cbd5e1;
        color: #64748b;
        padding: 0.8rem 2rem;
        border-radius: 50px;
        font-weight: 600;
        transition: 0.3s;
        text-decoration: none;
        display: flex;
        align-items: center;
    }

        .btn-cancel:hover {
            background: #f1f5f9;
            color: #1e293b;
        }

    .form-layout-grid {
        display: grid;
        grid-template-columns: 350px 1fr;
        gap: 1.5rem;
    }

    .premium-card {
        background: #fff;
        border-radius: 16px;
        border: 1px solid rgba(0,0,0,0.05);
        box-shadow: 0 4px 20px rgba(0,0,0,0.02);
        overflow: hidden;
    }

    .card-header-clean {
        padding: 1.2rem 1.5rem;
        border-bottom: 1px solid #f1f5f9;
        font-weight: 700;
        color: #002855;
    }

    .card-body {
        padding: 1.5rem;
    }

    /* Image Edit specific */
    .upload-area {
        position: relative;
        height: 220px;
        border: 2px dashed #cbd5e1;
        border-radius: 12px;
        background: #f8fafc;
        transition: 0.3s;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
    }

        .upload-area:hover {
            border-color: #002855;
        }

    .file-input {
        position: absolute;
        inset: 0;
        opacity: 0;
        cursor: pointer;
        z-index: 10;
    }

    .preview-box {
        position: absolute;
        inset: 0;
        background: #fff;
        z-index: 4;
    }

        .preview-box.show {
            display: block;
        }

        .preview-box img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .overlay-edit {
        position: absolute;
        inset: 0;
        background: rgba(0,40,85,0.4);
        display: flex;
        align-items: center;
        justify-content: center;
        color: #fff;
        font-weight: 700;
        opacity: 0;
        transition: 0.3s;
        gap: 8px;
        backdrop-filter: blur(2px);
        pointer-events: none;
    }

    .upload-area:hover .overlay-edit {
        opacity: 1;
    }

    .btn-remove {
        position: absolute;
        top: 10px;
        right: 10px;
        width: 30px;
        height: 30px;
        background: rgba(255,255,255,0.9);
        border-radius: 50%;
        border: none;
        color: #ef4444;
        cursor: pointer;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }

    .form-group-modern {
        margin-bottom: 1.2rem;
    }

        .form-group-modern label {
            display: block;
            font-size: 0.9rem;
            font-weight: 600;
            color: #475569;
            margin-bottom: 6px;
        }

        .form-group-modern input, .form-group-modern textarea {
            width: 100%;
            padding: 0.8rem 1rem;
            border: 1px solid #e2e8f0;
            border-radius: 10px;
            transition: 0.3s;
            font-size: 0.95rem;
        }

            .form-group-modern input:focus {
                border-color: #002855;
                outline: none;
                box-shadow: 0 0 0 3px rgba(0,40,85,0.05);
            }

    .req {
        color: #ef4444;
    }

    .toggle-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 1rem;
        padding-top: 1rem;
        border-top: 1px solid #f1f5f9;
    }

    .switch {
        position: relative;
        display: inline-block;
        width: 44px;
        height: 24px;
    }

        .switch input {
            opacity: 0;
            width: 0;
            height: 0;
        }

    .slider {
        position: absolute;
        cursor: pointer;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: #cbd5e1;
        transition: .4s;
        border-radius: 34px;
    }

        .slider:before {
            position: absolute;
            content: "";
            height: 18px;
            width: 18px;
            left: 3px;
            bottom: 3px;
            background-color: white;
            transition: .4s;
            border-radius: 50%;
        }

    input:checked + .slider {
        background-color: #10b981;
    }

        input:checked + .slider:before {
            transform: translateX(20px);
        }

    .tabs-header {
        display: flex;
        border-bottom: 1px solid #f1f5f9;
        background: #fafbfc;
        border-radius: 16px 16px 0 0;
        overflow: hidden;
    }

    .tab-btn {
        flex: 1;
        padding: 1rem;
        border: none;
        background: transparent;
        font-weight: 700;
        color: #64748b;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        transition: 0.3s;
        border-bottom: 3px solid transparent;
    }

        .tab-btn img {
            width: 20px;
            border-radius: 4px;
        }

        .tab-btn.active {
            color: #002855;
            border-bottom-color: #002855;
            background: #fff;
        }

    .tab-content {
        display: none;
    }

        .tab-content.active {
            display: block;
            animation: fadeIn 0.3s ease;
        }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@media (max-width: 992px) {
        .form-layout-grid {
            grid-template-columns: 1fr;
        }

        .form-header-action {
            flex-direction: column;
            align-items: flex-start;
            gap: 1rem;
        }

        .header-btns {
            width: 100%;
            justify-content: space-between;
        }
    }
</style>

<script>
    const imageInput = document.getElementById('imageInput');
    const newPreview = document.getElementById('newPreview');
    const imgPreview = document.getElementById('imgPreview');
    const currentDisplay = document.getElementById('currentDisplay');

    imageInput.addEventListener('change', function() {
        const file = this.files[0];
        if (file) {
            const reader = new FileReader();
            reader.onload = function(e) {
                imgPreview.src = e.target.result;
                newPreview.style.display = 'block';
                if(currentDisplay) currentDisplay.style.display = 'none';
            };
            reader.readAsDataURL(file);
        }
    });

    function restoreOriginal() {
        imageInput.value = '';
        newPreview.style.display = 'none';
        imgPreview.src = '';
        if(currentDisplay) currentDisplay.style.display = 'block';
    }

    function openTab(lang) {
        document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));
        document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active'));
        document.getElementById('tab-' + lang).classList.add('active');
        event.currentTarget.classList.add('active');
    }
</script>