@model PerfumeStore.Models.ShippingZone
@{
    ViewData["Title"] = System.Globalization.CultureInfo.CurrentCulture.Name == "ar" ? "إضافة منطقة شحن" : "Add Shipping Zone";
    var isArabic = System.Globalization.CultureInfo.CurrentCulture.Name == "ar";
    Layout = "_AdminLayout";
}

<div class="page-header animate-fade-up">
    <div class="header-left">
        <h1>@ViewData["Title"]</h1>
    </div>
    <div class="header-right">
        <a href="/Admin/ShippingZones" class="btn btn-outline">
            <i class="fas fa-arrow-left"></i>
            @(isArabic ? "عودة" : "Back")
        </a>
    </div>
</div>

<div class="card animate-fade-up delay-1" style="max-width: 600px; margin: 0 auto;">
    <div class="card-body" style="padding: 2.5rem;">
        <form asp-action="CreateShippingZone" method="post" class="premium-form">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label>@(isArabic ? "اسم المنطقة (عربي)" : "Zone Name (Arabic)") *</label>
                <input asp-for="NameAr" required dir="rtl" />
                <span asp-validation-for="NameAr" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>@(isArabic ? "اسم المنطقة (إنجليزي)" : "Zone Name (English)") *</label>
                <input asp-for="NameEn" required />
                <span asp-validation-for="NameEn" class="text-danger"></span>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label>@(isArabic ? "تكلفة الشحن (OMR)" : "Shipping Cost (OMR)") *</label>
                    <input asp-for="Cost" type="number" step="0.1" required />
                </div>
                <div class="form-group">
                    <label>@(isArabic ? "مدة التوصيل (أيام)" : "Est. Delivery (Days)") *</label>
                    <input asp-for="EstimatedDays" type="number" required />
                </div>
            </div>

            <div class="form-group" style="margin-top: 1rem;">
                <label class="checkbox-label">
                    <input asp-for="IsActive" checked />
                    <span>@(isArabic ? "تفعيل المنطقة" : "Active Zone")</span>
                </label>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary btn-lg" style="width: 100%;">
                    <i class="fas fa-save"></i>
                    @(isArabic ? "حفظ المنطقة" : "Save Zone")
                </button>
            </div>
        </form>
    </div>
</div>