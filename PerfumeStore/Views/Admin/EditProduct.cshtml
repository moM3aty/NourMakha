<script>
    document.getElementById('imageInput').addEventListener('change', function(e) {
        const file = e.target.files[0];
        if (file) {
            const reader = new FileReader();
            reader.onload = function(e) {
                const preview = document.getElementById('imagePreview');
                preview.innerHTML = `<img src="${e.target.result}" alt="Preview" style="max-width: 100%; border-radius: 12px; border: 1px solid var(--gold-primary);" />`;
            };
            reader.readAsDataURL(file);
        }
    });

    // Currency Conversion Logic
    const baseInput = document.getElementById('basePriceInput');
    const currencySelect = document.getElementById('currencySelector');
    const previewText = document.getElementById('convertedPriceText');

    function updateCurrencyPreview() {
        const basePrice = parseFloat(baseInput.value) || 0;
        const selectedOption = currencySelect.options[currencySelect.selectedIndex];
        const rate = parseFloat(selectedOption.getAttribute('data-rate'));
        const currencyCode = selectedOption.value;
        const flag = selectedOption.text.split(' ')[0]; // Extract flag

        const convertedPrice = (basePrice * rate).toFixed(2);

        // Update display text
        previewText.innerHTML = `${convertedPrice} ${currencyCode} ${flag}`;

        // Visual feedback
        if (currencyCode === 'OMR') {
            previewText.style.color = 'var(--text-secondary)';
            previewText.style.fontWeight = 'normal';
        } else {
            previewText.style.color = 'var(--gold-primary)';
            previewText.style.fontWeight = 'bold';
        }
    }

    // Attach event listeners
    baseInput.addEventListener('input', updateCurrencyPreview);

    // Initial calculation on load
    document.addEventListener("DOMContentLoaded", function() {
        updateCurrencyPreview();
    });
</script>