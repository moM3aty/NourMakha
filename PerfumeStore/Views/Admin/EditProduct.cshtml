@model PerfumeStore.ViewModels.ProductViewModel
@{
    ViewData["Title"] = System.Globalization.CultureInfo.CurrentCulture.Name == "ar" ? "تعديل المنتج" : "Edit Product";
    var isArabic = System.Globalization.CultureInfo.CurrentCulture.Name == "ar";
    Layout = "_AdminLayout";
}

<div class="page-header animate-fade-up">
    <div class="header-left">
        <h1>@ViewData["Title"]</h1>
        <p>@(isArabic ? "تعديل تفاصيل وبيانات المنتج" : "Modify product details and information")</p>
    </div>
    <div class="header-right">
        <a href="/Admin/Products" class="btn btn-outline">
            <i class="fas fa-arrow-left"></i>
            @(isArabic ? "إلغاء وعودة" : "Cancel & Return")
        </a>
    </div>
</div>

<form asp-action="EditProduct" method="post" enctype="multipart/form-data" class="product-form animate-fade-up delay-1">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="ImageUrl" />

    <div class="form-grid">
        <!-- Left Column -->
        <div class="form-col-main">
            <!-- Basic Info Card -->
            <div class="card">
                <div class="card-header">
                    <h3><i class="fas fa-info-circle"></i> @(isArabic ? "البيانات الأساسية" : "Basic Information")</h3>
                </div>
                <div class="card-body" style="padding: 2rem;">
                    <div class="form-group">
                        <label asp-for="Name">@(isArabic ? "اسم المنتج (إنجليزي)" : "Product Name (English)") <span style="color:var(--gold-primary)">*</span></label>
                        <input asp-for="Name" placeholder="e.g. Royal Oud" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="NameAr">@(isArabic ? "اسم المنتج (عربي)" : "Product Name (Arabic)")</label>
                        <input asp-for="NameAr" dir="rtl" placeholder="مثال: عود ملكي" />
                        <span asp-validation-for="NameAr" class="text-danger"></span>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label asp-for="Brand">@(isArabic ? "الماركة (إنجليزي)" : "Brand (English)")</label>
                            <input asp-for="Brand" />
                        </div>
                        <div class="form-group">
                            <label asp-for="BrandAr">@(isArabic ? "الماركة (عربي)" : "Brand (Arabic)")</label>
                            <input asp-for="BrandAr" dir="rtl" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="CategoryId">@(isArabic ? "الفئة" : "Category") <span style="color:var(--gold-primary)">*</span></label>
                        <select asp-for="CategoryId" class="form-select">
                            <option value="">@(isArabic ? "-- اختر الفئة --" : "-- Select Category --")</option>
                            @foreach (var category in ViewBag.Categories)
                            {
                                <option value="@category.Id" selected="@(Model.CategoryId == category.Id)">@(isArabic? category.NameAr: category.Name)</option>
                            }
                        </select>
                    </div>

                    <div class="form-group">
                        <label asp-for="Description">@(isArabic ? "الوصف (إنجليزي)" : "Description (English)")</label>
                        <textarea asp-for="Description"></textarea>
                    </div>
                    <div class="form-group">
                        <label asp-for="DescriptionAr">@(isArabic ? "الوصف (عربي)" : "Description (Arabic)")</label>
                        <textarea asp-for="DescriptionAr" dir="rtl"></textarea>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Column -->
        <div class="form-col-side">
            <!-- Pricing & Stock Card -->
            <div class="card">
                <div class="card-header">
                    <h3><i class="fas fa-tag"></i> @(isArabic ? "السعر والمخزون" : "Pricing & Stock")</h3>
                </div>
                <div class="card-body" style="padding: 2rem;">
                    <div class="form-group">
                        <label asp-for="Price">@(isArabic ? "السعر (OMR)" : "Price (OMR)") <span style="color:var(--gold-primary)">*</span></label>
                        <input asp-for="Price" type="number" step="0.01" style="font-weight: bold; color: var(--gold-primary);" />
                    </div>
                    <div class="form-group">
                        <label asp-for="OldPrice">@(isArabic ? "السعر القديم (اختياري)" : "Old Price (Optional)")</label>
                        <input asp-for="OldPrice" type="number" step="0.01" />
                    </div>
                    <div class="form-group">
                        <label asp-for="StockQuantity">@(isArabic ? "الكمية المتوفرة" : "Stock Quantity") <span style="color:var(--gold-primary)">*</span></label>
                        <input asp-for="StockQuantity" type="number" />
                    </div>
                </div>
            </div>

            <!-- Attributes Card -->
            <div class="card">
                <div class="card-header">
                    <h3><i class="fas fa-sliders-h"></i> @(isArabic ? "الخصائص" : "Attributes")</h3>
                </div>
                <div class="card-body" style="padding: 2rem;">
                    <div class="form-group">
                        <label asp-for="Size">@(isArabic ? "الحجم" : "Size")</label>
                        <select asp-for="Size">
                            <option value="">@(isArabic ? "اختر" : "Select")</option>
                            <option value="30ml">30ml</option>
                            <option value="50ml">50ml</option>
                            <option value="75ml">75ml</option>
                            <option value="100ml">100ml</option>
                            <option value="200ml">200ml</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="Gender">@(isArabic ? "الجنس" : "Gender")</label>
                        <select asp-for="Gender">
                            <option value="">@(isArabic ? "اختر" : "Select")</option>
                            <option value="Men">@(isArabic ? "رجالي" : "Men")</option>
                            <option value="Women">@(isArabic ? "نسائي" : "Women")</option>
                            <option value="Unisex">@(isArabic ? "للجنسين" : "Unisex")</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="Concentration">@(isArabic ? "التركيز" : "Concentration")</label>
                        <select asp-for="Concentration">
                            <option value="">@(isArabic ? "اختر" : "Select")</option>
                            <option value="Parfum">Parfum</option>
                            <option value="EDP">EDP</option>
                            <option value="EDT">EDT</option>
                        </select>
                    </div>
                </div>
            </div>

            <!-- Image Card -->
            <div class="card">
                <div class="card-header">
                    <h3><i class="fas fa-image"></i> @(isArabic ? "الصورة" : "Image")</h3>
                </div>
                <div class="card-body" style="padding: 2rem; text-align: center;">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <div class="current-image-wrapper">
                            <span class="current-image-label">@(isArabic ? "الحالية" : "Current")</span>
                            <img src="@Model.ImageUrl" alt="Current" style="width: 100px; height: 100px; object-fit: cover; border-radius: 12px;" />
                        </div>
                    }

                    <div class="image-upload-area">
                        <input type="file" name="image" id="imageInput" accept="image/*" style="position: absolute; width: 100%; height: 100%; opacity: 0; cursor: pointer; z-index: 10;" />
                        <div class="upload-label">
                            <i class="fas fa-cloud-upload-alt upload-icon"></i>
                            <span class="upload-text">@(isArabic ? "اسحب الصورة هنا أو اضغط للاختيار" : "Drop image here or click to upload")</span>
                        </div>
                        <div id="imagePreview" style="margin-top: 1rem;"></div>
                    </div>
                </div>
            </div>

            <!-- Status Card -->
            <div class="card">
                <div class="card-header">
                    <h3><i class="fas fa-check-circle"></i> @(isArabic ? "الحالة" : "Status")</h3>
                </div>
                <div class="card-body" style="padding: 2rem;">
                    <div class="checkbox-group">
                        <label class="checkbox-label">
                            <input asp-for="IsActive" />
                            <span>@(isArabic ? "نشط (معروض للبيع)" : "Active (Visible)")</span>
                        </label>
                    </div>
                    <div class="checkbox-group">
                        <label class="checkbox-label">
                            <input asp-for="IsFeatured" />
                            <span>@(isArabic ? "منتج مميز (الصفحة الرئيسية)" : "Featured Product")</span>
                        </label>
                    </div>
                    <div class="checkbox-group">
                        <label class="checkbox-label">
                            <input asp-for="IsNewArrival" />
                            <span>@(isArabic ? "وصل حديثاً" : "New Arrival")</span>
                        </label>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="form-actions">
        <button type="submit" class="btn btn-primary btn-lg" style="min-width: 200px;">
            <i class="fas fa-save"></i>
            @(isArabic ? "حفظ التعديلات" : "Save Changes")
        </button>
    </div>
</form>

<style>
    /* Specific Layout for Product Form */
    .form-grid {
        display: grid;
        grid-template-columns: 2fr 1fr; /* Main content wider than sidebar */
        gap: 1.5rem;
        align-items: start;
    }

    @@media (max-width: 992px) {
        .form-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

<script>
    document.getElementById('imageInput').addEventListener('change', function(e) {
        const file = e.target.files[0];
        if (file) {
            const reader = new FileReader();
            reader.onload = function(e) {
                const preview = document.getElementById('imagePreview');
                preview.innerHTML = `<img src="${e.target.result}" alt="Preview" style="max-width: 100%; border-radius: 12px; border: 1px solid var(--gold-primary);" />`;
            };
            reader.readAsDataURL(file);
        }
    });
</script>
