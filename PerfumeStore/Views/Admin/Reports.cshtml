@{
    ViewData["Title"] = System.Globalization.CultureInfo.CurrentCulture.Name == "ar" ? "التقارير والإحصائيات" : "Reports & Analytics";
    var isArabic = System.Globalization.CultureInfo.CurrentCulture.Name == "ar";
    Layout = "_AdminLayout";
}

<div class="page-content-wrapper animate-fade-up">
    <!-- Header Section -->
    <div class="page-header-premium">
        <div class="header-content">
            <div class="title-wrapper">
                <div class="icon-box">
                    <i class="fas fa-chart-pie"></i>
                </div>
                <div>
                    <h1>@ViewData["Title"]</h1>
                    <p>@Html.Raw(isArabic ? "تحليل شامل للمبيعات، الطلبات وأداء المنتجات" : "Comprehensive analysis of sales, orders, and product performance")</p>
                </div>
            </div>
            <div class="header-right">
                <button class="btn-silver-outline" onclick="window.print()">
                    <i class="fas fa-download"></i>
                    <span>@Html.Raw(isArabic ? "تصدير تقرير PDF" : "Export PDF")</span>
                </button>
            </div>
        </div>
    </div>

    <!-- Date Filter Toolbar -->
    <div class="toolbar-container animate-fade-up delay-1">
        <form method="get" class="reports-filter-form">
            <div class="filter-inputs">
                <div class="input-item">
                    <label>@Html.Raw(isArabic ? "من تاريخ" : "From Date")</label>
                    <div class="input-wrapper-pro">
                        <i class="far fa-calendar-alt"></i>
                        <input type="date" name="startDate" value="@DateTime.Today.AddMonths(-1).ToString("yyyy-MM-dd")" />
                    </div>
                </div>
                <div class="input-item">
                    <label>@Html.Raw(isArabic ? "إلى تاريخ" : "To Date")</label>
                    <div class="input-wrapper-pro">
                        <i class="far fa-calendar-check"></i>
                        <input type="date" name="endDate" value="@DateTime.Today.ToString("yyyy-MM-dd")" />
                    </div>
                </div>
            </div>
            <button type="submit" class="btn-royal-sm">
                <i class="fas fa-filter"></i>
                <span>@Html.Raw(isArabic ? "تحديث البيانات" : "Update Data")</span>
            </button>
        </form>
    </div>

    <!-- Stats Grid -->
    <div class="stats-grid animate-fade-up delay-1">
        <div class="stat-card">
            <div class="stat-info">
                <h3>@Html.Raw(isArabic ? "إجمالي المبيعات" : "Total Revenue")</h3>
                <p class="stat-value">24,500 <small>OMR</small></p>
                <span class="stat-change positive"><i class="fas fa-caret-up"></i> +12.5%</span>
            </div>
            <div class="stat-icon sales"><i class="fas fa-coins"></i></div>
        </div>

        <div class="stat-card">
            <div class="stat-info">
                <h3>@Html.Raw(isArabic ? "إجمالي الطلبات" : "Total Orders")</h3>
                <p class="stat-value">156</p>
                <span class="stat-change positive"><i class="fas fa-caret-up"></i> +8.2%</span>
            </div>
            <div class="stat-icon orders"><i class="fas fa-shopping-cart"></i></div>
        </div>

        <div class="stat-card">
            <div class="stat-info">
                <h3>@Html.Raw(isArabic ? "المنتجات المباعة" : "Items Sold")</h3>
                <p class="stat-value">342</p>
                <span class="stat-change positive"><i class="fas fa-caret-up"></i> +15.3%</span>
            </div>
            <div class="stat-icon products"><i class="fas fa-box"></i></div>
        </div>

        <div class="stat-card">
            <div class="stat-info">
                <h3>@Html.Raw(isArabic ? "متوسط قيمة الطلب" : "Avg. Order Value")</h3>
                <p class="stat-value">157 <small>OMR</small></p>
                <span class="stat-change negative"><i class="fas fa-caret-down"></i> -2.1%</span>
            </div>
            <div class="stat-icon customers"><i class="fas fa-receipt"></i></div>
        </div>
    </div>

    <!-- Charts Grid -->
    <div class="reports-main-grid animate-fade-up delay-2">
        <!-- Sales Performance (Full Width) -->
        <div class="card chart-main-card">
            <div class="card-header-clean">
                <div class="header-title">
                    <i class="fas fa-chart-line"></i>
                    <h3>@Html.Raw(isArabic ? "أداء المبيعات الشهري" : "Monthly Sales Performance")</h3>
                </div>
            </div>
            <div class="card-body">
                <div style="height: 350px; position: relative;">
                    <canvas id="salesChart"></canvas>
                </div>
            </div>
        </div>

        <!-- Distribution Charts (Side by Side) -->
        <div class="card">
            <div class="card-header-clean">
                <div class="header-title">
                    <i class="fas fa-tasks"></i>
                    <h3>@Html.Raw(isArabic ? "حالات الطلبات" : "Orders by Status")</h3>
                </div>
            </div>
            <div class="card-body">
                <div style="height: 300px; position: relative;">
                    <canvas id="statusChart"></canvas>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header-clean">
                <div class="header-title">
                    <i class="fas fa-tags"></i>
                    <h3>@Html.Raw(isArabic ? "المبيعات حسب الفئة" : "Sales by Category")</h3>
                </div>
            </div>
            <div class="card-body">
                <div style="height: 300px; position: relative;">
                    <canvas id="categoryChart"></canvas>
                </div>
            </div>
        </div>

        <!-- Top Performing Products -->
        <div class="card full-row">
            <div class="card-header-clean">
                <div class="header-title">
                    <i class="fas fa-trophy"></i>
                    <h3>@Html.Raw(isArabic ? "المنتجات الأكثر مبيعاً" : "Top Performing Products")</h3>
                </div>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="premium-table">
                        <thead>
                            <tr>
                                <th width="80">@Html.Raw(isArabic ? "المركز" : "Rank")</th>
                                <th>@Html.Raw(isArabic ? "المنتج" : "Product")</th>
                                <th>@Html.Raw(isArabic ? "إجمالي المبيعات" : "Total Revenue")</th>
                                <th>@Html.Raw(isArabic ? "النمو" : "Growth")</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr class="top-row-highlight">
                                <td><span class="rank-badge gold">1</span></td>
                                <td>
                                    <div class="product-cell-mini">
                                        <div class="p-img"><i class="fas fa-crown"></i></div>
                                        <span>Oud Royal - عود ملكي</span>
                                    </div>
                                </td>
                                <td class="val-bold">4,500 OMR</td>
                                <td><span class="growth-label positive">+22%</span></td>
                            </tr>
                            <tr>
                                <td><span class="rank-badge silver">2</span></td>
                                <td>Amber Nights - ليالي العنبر</td>
                                <td class="val-bold">3,800 OMR</td>
                                <td><span class="growth-label positive">+14%</span></td>
                            </tr>
                            <tr>
                                <td><span class="rank-badge bronze">3</span></td>
                                <td>Rose Mystique - غموض الورد</td>
                                <td class="val-bold">2,900 OMR</td>
                                <td><span class="growth-label neutral">0%</span></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* --- Premium Reports Specific Styles --- */
    .reports-main-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1.5rem;
    }

    .chart-main-card, .full-row {
        grid-column: 1 / -1;
    }

    .reports-filter-form {
        display: flex;
        justify-content: space-between;
        align-items: flex-end;
        width: 100%;
        gap: 1rem;
    }

    .filter-inputs {
        display: flex;
        gap: 1.5rem;
    }

    .input-item label {
        display: block;
        font-size: 0.8rem;
        font-weight: 700;
        color: var(--text-secondary);
        margin-bottom: 5px;
        text-transform: uppercase;
    }

    .input-wrapper-pro {
        position: relative;
        display: flex;
        align-items: center;
    }

        .input-wrapper-pro i {
            position: absolute;
            inset-inline-start: 1rem;
            color: var(--primary-color);
            opacity: 0.5;
        }

        .input-wrapper-pro input {
            padding: 0.7rem 1rem 0.7rem 2.8rem !important;
            border-radius: 10px;
            border: 1px solid #e2e8f0;
            background: #fff;
            font-weight: 600;
            color: var(--primary-color);
        }

    body.rtl .input-wrapper-pro input {
        padding: 0.7rem 2.8rem 0.7rem 1rem !important;
    }

    .btn-royal-sm {
        background: var(--primary-color);
        color: #fff;
        border: none;
        padding: 0.75rem 1.5rem;
        border-radius: 10px;
        font-weight: 700;
        display: flex;
        align-items: center;
        gap: 8px;
        transition: 0.3s;
    }

        .btn-royal-sm:hover {
            transform: translateY(-2px);
            background: var(--primary-hover);
            box-shadow: 0 4px 12px rgba(0,40,85,0.2);
        }

    .btn-silver-outline {
        background: #fff;
        border: 1.5px solid var(--border-color);
        color: var(--text-secondary);
        padding: 0.6rem 1.2rem;
        border-radius: 10px;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 8px;
        transition: 0.3s;
    }

        .btn-silver-outline:hover {
            border-color: var(--primary-color);
            color: var(--primary-color);
            background: var(--primary-light);
        }

    /* Rank Badges */
    .rank-badge {
        width: 28px;
        height: 28px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 800;
        font-size: 0.8rem;
    }

        .rank-badge.gold {
            background: #fef3c7;
            color: #92400e;
            border: 1px solid #f59e0b;
        }

        .rank-badge.silver {
            background: #f1f5f9;
            color: #475569;
            border: 1px solid #cbd5e1;
        }

        .rank-badge.bronze {
            background: #ffedd5;
            color: #9a3412;
            border: 1px solid #ea580c;
        }

    .product-cell-mini {
        display: flex;
        align-items: center;
        gap: 10px;
        font-weight: 600;
    }

    .p-img {
        width: 32px;
        height: 32px;
        background: var(--primary-light);
        border-radius: 6px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--primary-color);
    }

    .val-bold {
        font-weight: 800;
        color: var(--primary-color);
    }

    .growth-label {
        font-size: 0.75rem;
        font-weight: 800;
        padding: 3px 8px;
        border-radius: 4px;
    }

        .growth-label.positive {
            background: #dcfce7;
            color: #166534;
        }

        .growth-label.neutral {
            background: #f1f5f9;
            color: #475569;
        }

    .card-header-clean {
        padding: 1.5rem;
        border-bottom: 1px solid rgba(0,0,0,0.03);
    }

    .header-title {
        display: flex;
        align-items: center;
        gap: 10px;
        color: var(--primary-color);
    }

        .header-title i {
            font-size: 1.1rem;
            opacity: 0.7;
        }

        .header-title h3 {
            font-size: 1.05rem;
            margin: 0;
            font-weight: 700;
        }

    @@media (max-width: 992px) {
        .reports-main-grid {
            grid-template-columns: 1fr;
        }

        .reports-filter-form {
            flex-direction: column;
            align-items: stretch;
        }

        .filter-inputs {
            flex-direction: column;
            gap: 1rem;
        }
    }

    .btn-add-new {
        background: var(--primary-blue);
        color: #fff;
        padding: 0.8rem 1.5rem;
        border-radius: 12px;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-weight: 600;
        transition: all 0.3s ease;
        box-shadow: 0 4px 12px rgba(0, 40, 85, 0.15);
    }

        .btn-add-new:hover {
            background: #003377;
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(0, 40, 85, 0.25);
            color: #fff;
        }
</style>

@section Scripts {
    <script>
        // Global Chart Defaults for Premium Look
        Chart.defaults.font.family = "'Tajawal', sans-serif";
        Chart.defaults.color = "#64748b";

        // 1. Sales Chart (Line)
        const salesCtx = document.getElementById('salesChart').getContext('2d');
        const salesGradient = salesCtx.createLinearGradient(0, 0, 0, 400);
        salesGradient.addColorStop(0, 'rgba(0, 40, 85, 0.15)');
        salesGradient.addColorStop(1, 'rgba(0, 40, 85, 0)');

        new Chart(salesCtx, {
            type: 'line',
            data: {
                labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'],
                datasets: [{
                    label: '@Html.Raw(isArabic ? "المبيعات (OMR)" : "Sales (OMR)")',
                    data: [12000, 15000, 18000, 22000, 19000, 25000, 28000, 24000, 26000, 30000, 28000, 32000],
                    borderColor: '#002855',
                    backgroundColor: salesGradient,
                    borderWidth: 3,
                    tension: 0.4,
                    fill: true,
                    pointBackgroundColor: '#fff',
                    pointBorderColor: '#002855',
                    pointBorderWidth: 2,
                    pointRadius: 4
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: { legend: { display: false } },
                scales: {
                    y: { beginAtZero: true, grid: { borderDash: [5, 5], color: '#f1f5f9' } },
                    x: { grid: { display: false } }
                }
            }
        });

        // 2. Status Chart (Doughnut)
        new Chart(document.getElementById('statusChart'), {
            type: 'doughnut',
            data: {
                labels: [
                    '@Html.Raw(isArabic ? "تم التسليم" : "Delivered")',
                    '@Html.Raw(isArabic ? "قيد الشحن" : "Shipped")',
                    '@Html.Raw(isArabic ? "قيد المعالجة" : "Processing")',
                    '@Html.Raw(isArabic ? "قيد الانتظار" : "Pending")'
                ],
                datasets: [{
                    data: [65, 20, 10, 5],
                    backgroundColor: ['#10b981', '#3b82f6', '#8b5cf6', '#f59e0b'],
                    borderWidth: 0,
                    hoverOffset: 15
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                cutout: '75%',
                plugins: {
                    legend: { position: 'bottom', labels: { usePointStyle: true, padding: 20 } }
                }
            }
        });

        // 3. Category Chart (Bar)
        new Chart(document.getElementById('categoryChart'), {
            type: 'bar',
            data: {
                labels: [
                    '@Html.Raw(isArabic ? "رجالي" : "Men")',
                    '@Html.Raw(isArabic ? "نسائي" : "Women")',
                    '@Html.Raw(isArabic ? "للجنسين" : "Unisex")',
                    '@Html.Raw(isArabic ? "فاخر" : "Luxury")'
                ],
                datasets: [{
                    label: '@Html.Raw(isArabic ? "المبيعات" : "Sales")',
                    data: [8500, 7200, 4800, 4000],
                    backgroundColor: '#002855',
                    borderRadius: 8,
                    barThickness: 30
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: { legend: { display: false } },
                scales: {
                    y: { beginAtZero: true, grid: { borderDash: [5, 5], color: '#f1f5f9' } },
                    x: { grid: { display: false } }
                }
            }
        });
    </script>
}