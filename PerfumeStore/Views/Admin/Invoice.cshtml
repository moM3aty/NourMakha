@model PerfumeStore.Models.Order
@{
    ViewData["Title"] = System.Globalization.CultureInfo.CurrentCulture.Name == "ar" ? $"فاتورة #{Model.Id}" : $"Invoice #{Model.Id}";
    var isArabic = System.Globalization.CultureInfo.CurrentCulture.Name == "ar";
    Layout = null;
}

<!DOCTYPE html>
<html lang="@System.Globalization.CultureInfo.CurrentCulture.Name" dir="@(isArabic ? "rtl" : "ltr")">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, sans-serif;
            background: #f5f5f5;
            padding: 2rem;
            color: #333;
        }

        .invoice {
            max-width: 800px;
            margin: 0 auto;
            background: white;
            padding: 3rem;
            border-radius: 10px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.05);
        }

        .invoice-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 3rem;
            padding-bottom: 2rem;
            border-bottom: 2px solid #002855;
        }

        .company-info h1 {
            font-size: 2.2rem;
            color: #002855;
            margin-bottom: 0.5rem;
        }

        .company-info p {
            color: #666;
            margin-bottom: 0.25rem;
            font-size: 0.95rem;
        }

        .invoice-info {
            text-align: @(isArabic ? "left" : "right");
        }

            .invoice-info h2 {
                font-size: 1.8rem;
                color: #002855;
                margin-bottom: 0.5rem;
                letter-spacing: 1px;
            }

            .invoice-info p {
                color: #555;
                margin-bottom: 0.25rem;
                font-size: 1rem;
            }

        .customer-info {
            margin-bottom: 2.5rem;
            padding: 1.5rem;
            background: #f9fafb;
            border-radius: 8px;
            border: 1px solid #eee;
        }

            .customer-info p {
                margin-bottom: 0.4rem;
                color: #444;
                line-height: 1.5;
            }

            .customer-info strong {
                color: #002855;
                display: block;
                margin-bottom: 0.8rem;
                font-size: 1.2rem;
            }

        .items-table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 2.5rem;
        }

            .items-table th {
                background: #002855;
                color: #fff;
                padding: 12px 15px;
                text-align: start;
                font-weight: 600;
                font-size: 0.95rem;
            }

            .items-table td {
                padding: 15px;
                border-bottom: 1px solid #eee;
                color: #444;
                vertical-align: middle;
            }

            .items-table tr:last-child td {
                border-bottom: 2px solid #002855;
            }

        .totals {
            max-width: 350px;
            margin-left: auto;
            margin-right: 0;
        }

        body[dir="rtl"] .totals {
            margin-left: 0;
            margin-right: auto;
        }

        .totals-row {
            display: flex;
            justify-content: space-between;
            padding: 0.8rem 0;
            border-bottom: 1px solid #eee;
            color: #555;
            font-size: 0.95rem;
        }

            .totals-row.discount {
                color: #166534;
                font-weight: 600;
                background-color: #f0fdf4;
                padding: 0.8rem 10px;
                border-radius: 4px;
                margin: 5px 0;
                border-bottom: none;
            }

        .totals-total {
            display: flex;
            justify-content: space-between;
            padding: 1.2rem 0;
            font-size: 1.4rem;
            font-weight: 800;
            border-bottom: none;
            color: #002855;
            border-top: 3px solid #002855;
            margin-top: 15px;
        }

        .footer {
            text-align: center;
            margin-top: 4rem;
            padding-top: 1.5rem;
            border-top: 1px solid #eee;
            color: #888;
            font-size: 0.9rem;
        }
        @@media print {
            body

        {
            background: white;
            padding: 0;
            margin: 0;
        }

        .invoice {
            box-shadow: none;
            border: none;
            padding: 0;
            max-width: 100%;
            margin: 0;
        }

        }
    </style>
</head>
<body>
    <div class="invoice">
        <div class="invoice-header">
            <div class="company-info">
                <img src="~/images/logo.png" width="100px;" alt="Nour" />
                <p>Oman, Muscat</p>
                <p>+968 98185589</p>
                <p>info@nourmakha.com</p>
            </div>
            <div class="invoice-info">
                <h2>@(isArabic ? "فاتورة" : "INVOICE")</h2>
                <p><strong>#@Model.OrderNumber</strong></p>
                <p>@Model.CreatedAt.ToString("dd MMM yyyy")</p>
            </div>
        </div>

        <div class="customer-info">
            <p><strong>@Model.ShippingFirstName @Model.ShippingLastName</strong></p>
            <p>@Model.ShippingAddress</p>
            <p>@Model.ShippingCity, @Model.ShippingCountry</p>
            <p>@Model.ShippingPhone</p>
        </div>

        <table class="items-table">
            <thead>
                <tr>
                    <th width="50%">@(isArabic ? "المنتج" : "Product")</th>
                    <th width="20%" style="text-align:center;">@(isArabic ? "الكمية" : "Qty")</th>
                    <th width="30%" style="text-align:end;">@(isArabic ? "الإجمالي" : "Total")</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.OrderItems)
                {
                    <tr>
                        <td>@item.ProductName</td>
                        <td style="text-align:center;">@item.Quantity</td>
                        <td style="text-align:end;">@item.TotalPrice.ToString("N2") OMR</td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="totals">
            <div class="totals-row">
                <span>@(isArabic ? "المجموع الفرعي" : "Subtotal")</span>
                <span>@Model.Subtotal.ToString("N2") OMR</span>
            </div>

            @if (Model.Discount > 0)
            {
                <div class="totals-row discount">
                    <span>
                        @(isArabic ? "الخصم" : "Discount")
                        @if (!string.IsNullOrEmpty(Model.CouponCode))
                        {
                            <small>(@Model.CouponCode)</small>
                        }
                    </span>
                    <span>-@Model.Discount.ToString("N2") OMR</span>
                </div>
            }

            <div class="totals-row">
                <span>@(isArabic ? "الشحن" : "Shipping")</span>
                <span>@Model.ShippingCost.ToString("N2") OMR</span>
            </div>

            @if (Model.TaxAmount > 0)
            {
                <div class="totals-row">
                    <span>@(isArabic ? "الضريبة" : "Tax")</span>
                    <span>@Model.TaxAmount.ToString("N2") OMR</span>
                </div>
            }

            <div class="totals-total">
                <span>@(isArabic ? "الإجمالي المستحق" : "Total Due")</span>
                <span>@Model.GrandTotal.ToString("N2") OMR</span>
            </div>
        </div>

        <div class="footer">
            <p>@(isArabic ? "شكراً لتسوقكم معنا" : "Thank you for shopping with us")</p>
            <p>NourMakha Perfumes &copy; @DateTime.Now.Year</p>
        </div>
    </div>
    <script>window.onload = function() { window.print(); };</script>
</body>
</html>