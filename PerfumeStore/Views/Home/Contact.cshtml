@model PerfumeStore.Models.ContactMessage
@{
    ViewData["Title"] = System.Globalization.CultureInfo.CurrentCulture.Name == "ar" ? "تواصل معنا" : "Contact Us";
    var isArabic = System.Globalization.CultureInfo.CurrentCulture.Name == "ar";
}

<!-- Contact Section -->
<section class="contact-section">
    <div class="container">
        <div class="contact-grid">
            <!-- Contact Info -->
            <div class="contact-info">
                <h2>@(isArabic ? "تواصل معنا" : "Get in Touch")</h2>
                <p>@(isArabic ? "نحرص في نور مخا للعود والعطور على أن نكون قريبين منكم." : "At NourMakha Oud & Perfumes, we strive to be close to you.")</p>

                <div class="contact-items">
                    <div class="contact-item">
                        <div class="contact-icon"><i class="fab fa-whatsapp"></i></div>
                        <div class="contact-text">
                            <h4>@(isArabic ? "واتساب & هاتف" : "WhatsApp & Phone")</h4>
                            <p dir="ltr">98185589 | 96366332</p>
                            <p dir="ltr">+966 50 123 4567 (Unified)</p>
                        </div>
                    </div>

                    <div class="contact-item">
                        <div class="contact-icon"><i class="fas fa-envelope"></i></div>
                        <div class="contact-text">
                            <h4>@(isArabic ? "البريد الإلكتروني" : "Email")</h4>
                            <p>info@nourmakha.com</p>
                        </div>
                    </div>

                    <div class="contact-item">
                        <div class="contact-icon"><i class="fab fa-instagram"></i></div>
                        <div class="contact-text">
                            <h4>@(isArabic ? "إنستجرام" : "Instagram")</h4>
                            <p>@("@nourmakha.om")</p>
                        </div>
                    </div>

                    <div class="branches-box" style="margin-top: 2rem;">
                        <h3 style="color: #002855; margin-bottom: 1rem;">@(isArabic ? "فروعنا الرسمية" : "Our Branches")</h3>
                        <ul style="list-style: none; padding: 0; color: #6c757d;">
                            <li style="margin-bottom: 0.5rem;"><i class="fas fa-map-pin" style="color: #002855; margin-left: 10px;"></i> @(isArabic ? "فرع الموالح" : "Mawaleh Branch")</li>
                            <li><i class="fas fa-map-pin" style="color: #002855; margin-left: 10px;"></i> @(isArabic ? "فرع صور" : "Sur Branch")</li>
                        </ul>
                    </div>

                    <div class="distributors-box" style="margin-top: 2rem;">
                        <h3 style="color: #002855; margin-bottom: 1rem; font-size: 1.1rem;">@(isArabic ? "متوفرون أيضاً في" : "Also Available In")</h3>
                        <p style="color: #6c757d; font-size: 0.9rem;">
                            @(isArabic ? "العامرات - المعبيلة - الخوير - الخوض - البريمي - صحم - صلالة" : "Al Amerat - Ma'abela - Al Khuwair - Al Khoud - Al Buraimi - Saham - Salalah")
                        </p>
                    </div>
                </div>
            </div>

            <!-- Contact Form -->
            <div class="contact-form-container">
                <form asp-action="Contact" method="post" class="contact-form">
                    <h3>@(isArabic ? "أرسل لنا رسالة" : "Send us a Message")</h3>

                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success">
                            <i class="fas fa-check-circle"></i>
                            @TempData["Success"]
                        </div>
                    }

                    <div class="form-row">
                        <div class="form-group">
                            <label asp-for="Name">@(isArabic ? "الاسم" : "Name")</label>
                            <input asp-for="Name" placeholder="@(isArabic ? "أدخل اسمك" : "Enter your name")" required />
                            <span asp-validation-for="Name" class="error-text"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email">@(isArabic ? "البريد الإلكتروني" : "Email")</label>
                            <input asp-for="Email" type="email" placeholder="@(isArabic ? "أدخل بريدك الإلكتروني" : "Enter your email")" required />
                            <span asp-validation-for="Email" class="error-text"></span>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label asp-for="Phone">@(isArabic ? "الهاتف" : "Phone")</label>
                            <input asp-for="Phone" placeholder="@(isArabic ? "أدخل رقم هاتفك" : "Enter your phone")" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Subject">@(isArabic ? "الموضوع" : "Subject")</label>
                            <input asp-for="Subject" placeholder="@(isArabic ? "موضوع الرسالة" : "Message subject")" required />
                            <span asp-validation-for="Subject" class="error-text"></span>
                        </div>
                    </div>

                    <div class="form-group full-width">
                        <label asp-for="Message">@(isArabic ? "الرسالة" : "Message")</label>
                        <textarea asp-for="Message" rows="5" placeholder="@(isArabic ? "اكتب رسالتك هنا..." : "Write your message here...")" required></textarea>
                        <span asp-validation-for="Message" class="error-text"></span>
                    </div>

                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="fas fa-paper-plane"></i>
                        @(isArabic ? "إرسال الرسالة" : "Send Message")
                    </button>
                </form>
            </div>
        </div>
    </div>
</section>

<style>
    .contact-section {
        padding: 6rem 0;
        margin-top: 80px;
    }

    .contact-grid {
        display: grid;
        grid-template-columns: 1fr 1.2fr;
        gap: 4rem;
    }

    .contact-info h2 {
        font-family: 'Playfair Display', serif;
        font-size: 2.5rem;
        margin-bottom: 1rem;
        color: #002855;
    }

    .contact-info > p {
        color: #6c757d;
        margin-bottom: 2rem;
    }

    .contact-items {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        margin-bottom: 2rem;
    }

    .contact-item {
        display: flex;
        align-items: flex-start;
        gap: 1rem;
    }

    .contact-icon {
        width: 50px;
        height: 50px;
        background: rgba(0, 40, 85, 0.1);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #002855;
        font-size: 1.25rem;
        flex-shrink: 0;
    }

    .contact-text h4 {
        font-size: 1rem;
        margin-bottom: 0.25rem;
        color: #212529;
    }

    .contact-text p {
        color: #6c757d;
        font-size: 0.9rem;
        margin-bottom: 0.2rem;
    }

    .contact-form-container {
        background: #ffffff;
        border: 1px solid rgba(0, 40, 85, 0.2);
        border-radius: 20px;
        padding: 2.5rem;
        box-shadow: 0 4px 20px rgba(0,0,0,0.05);
    }

    .contact-form h3 {
        font-family: 'Playfair Display', serif;
        font-size: 1.5rem;
        margin-bottom: 1.5rem;
        color: #002855;
    }

    .form-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1rem;
        margin-bottom: 1rem;
    }

    .form-group {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

        .form-group.full-width {
            grid-column: 1 / -1;
        }

        .form-group label {
            font-size: 0.875rem;
            font-weight: 500;
            color: #495057;
        }

        .form-group input, .form-group textarea {
            padding: 1rem;
            background: #f8f9fa;
            border: 1px solid rgba(0, 40, 85, 0.2);
            border-radius: 10px;
            color: #212529;
            font-size: 1rem;
            transition: all 0.3s;
        }

            .form-group input:focus, .form-group textarea:focus {
                outline: none;
                border-color: #002855;
                background: #ffffff;
            }

    .error-text {
        color: #e74c3c;
        font-size: 0.75rem;
    }

    .alert-success {
        background: rgba(46, 204, 113, 0.1);
        border: 1px solid rgba(46, 204, 113, 0.3);
        color: #2ecc71;
        padding: 1rem;
        border-radius: 10px;
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    @@media (max-width: 768px) {
        .contact-grid {
            grid-template-columns: 1fr;
        }

        .form-row {
            grid-template-columns: 1fr;
        }
    }
</style>